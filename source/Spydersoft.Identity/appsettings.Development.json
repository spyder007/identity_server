{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    },
    "OpenTelemetry": {
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    }
  },
  "Telemetry": {
    "ActivitySourceName": "Identity.Local.Activity",
    "Log": {
      "Type": "console"
    },
    "MeterName": "Identity.Local.Meter",
    "Metrics": {
      "Type": "console"
    },
    "ServiceName": "Identity.Local",
    "Trace": {
      "Type": "console"
    }
  }
}