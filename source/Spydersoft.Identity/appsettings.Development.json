{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    },
    "OpenTelemetry": {
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    }
  },
  "Telemetry": {
    "ActivitySourceName": "Identity.Local.Activity",
    "Log": {
      "Otlp": {
        "Endpoint": "https://loki.mattgerega.net/otlp/v1/logs",
        "Protocol": "http"
      },
      "Type": "otlp"
    },
    "MeterName": "Identity.Local.Meter",
    "Metrics": {
      "Otlp": {
        "Endpoint": "https://mimir.mattgerega.net/otlp",
        "Protocol": "http"
      },
      "Type": "otlp"
    },
    "ServiceName": "Identity.Local",
    "Trace": {
      "Otlp": {
        "Endpoint": "http://tfx-internal.gerega.net:32326"
      },
      "Type": "otlp"
    }
  }
}