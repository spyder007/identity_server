@{
    ViewData["Title"] = "Account Locked";
}

<div class="min-h-screen bg-gradient-to-br from-red-50 to-yellow-50 flex items-center justify-center p-4">
    <div class="card bg-base-100 shadow-2xl max-w-md w-full">
        <div class="card-body text-center">
            <!-- Lockout Icon -->
            <div class="avatar mb-6">
                <div class="w-24 rounded-full bg-warning/10">
                    <i class="fas fa-lock text-warning text-4xl flex items-center justify-center h-full"></i>
                </div>
            </div>

            <!-- Title and Message -->
            <h1 class="text-3xl font-bold text-warning mb-4">Account Temporarily Locked</h1>
            <p class="text-lg text-base-content/80 mb-6">
                Your account has been temporarily locked due to too many failed login attempts.
            </p>

            <!-- Lockout Information -->
            <div class="bg-warning/10 p-6 rounded-lg mb-8">
                <div class="flex items-start space-x-3">
                    <i class="fas fa-clock text-warning mt-1"></i>
                    <div class="text-left">
                        <div class="font-medium mb-2">Security Protection Active</div>
                        <div class="text-sm text-base-content/80 space-y-1">
                            <p>• Your account is temporarily locked for security</p>
                            <p>• The lockout will automatically expire</p>
                            <p>• This protects your account from unauthorized access</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- What to do next -->
            <div class="space-y-6">
                <div class="bg-info/10 p-6 rounded-lg">
                    <h3 class="font-semibold mb-4 flex items-center">
                        <i class="fas fa-lightbulb text-info mr-2"></i>
                        What can you do?
                    </h3>
                    <div class="space-y-3 text-sm text-left">
                        <div class="flex items-start space-x-3">
                            <div class="badge badge-info badge-sm mt-1">1</div>
                            <span>Wait for the lockout period to expire and try again</span>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="badge badge-info badge-sm mt-1">2</div>
                            <span>Make sure you're using the correct username and password</span>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="badge badge-info badge-sm mt-1">3</div>
                            <span>Reset your password if you've forgotten it</span>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="badge badge-info badge-sm mt-1">4</div>
                            <span>Contact support if the issue persists</span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="space-y-4">
                    <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-primary btn-lg w-full">
                        <i class="fas fa-key mr-2"></i>
                        Reset My Password
                    </a>
                    
                    <div class="flex space-x-2">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline flex-1">
                            <i class="fas fa-redo mr-2"></i>
                            Try Again Later
                        </a>
                        <a asp-controller="Home" asp-action="Contact" class="btn btn-outline flex-1">
                            <i class="fas fa-envelope mr-2"></i>
                            Get Help
                        </a>
                    </div>
                </div>
            </div>

            <!-- Security Tips -->
            <div class="mt-8 p-4 bg-base-200 rounded-lg">
                <div class="text-sm">
                    <div class="font-medium mb-2 flex items-center">
                        <i class="fas fa-shield-alt text-success mr-2"></i>
                        Security Tips
                    </div>
                    <ul class="text-left text-xs text-base-content/70 space-y-1">
                        <li>• Use a strong, unique password</li>
                        <li>• Enable two-factor authentication</li>
                        <li>• Never share your login credentials</li>
                        <li>• Use a password manager</li>
                    </ul>
                </div>
            </div>

            <!-- Contact Support -->
            <div class="mt-6 text-xs text-base-content/60">
                Still having issues? 
                <a asp-controller="Home" asp-action="Contact" class="link link-primary">Contact Support</a>
            </div>
        </div>
    </div>
</div>
