@{
    ViewData["Title"] = "Check Your Email";
}

<div class="min-h-screen bg-gradient-to-br from-green-50 to-blue-50 flex items-center justify-center p-4">
    <div class="card bg-base-100 shadow-2xl max-w-md w-full">
        <div class="card-body text-center">
            <!-- Success Icon -->
            <div class="avatar mb-6">
                <div class="w-24 rounded-full bg-success/10">
                    <i class="fas fa-envelope-open text-success text-4xl flex items-center justify-center h-full"></i>
                </div>
            </div>

            <!-- Title and Message -->
            <h1 class="text-3xl font-bold text-gradient mb-4">Check Your Email!</h1>
            <p class="text-lg text-base-content/80 mb-6">
                We've sent password reset instructions to your email address.
            </p>

            <!-- Instructions -->
            <div class="bg-info/10 p-6 rounded-lg mb-8">
                <h3 class="font-semibold mb-4 flex items-center justify-center">
                    <i class="fas fa-list-check mr-2 text-info"></i>
                    Next Steps
                </h3>
                <ol class="text-left space-y-3 text-sm text-base-content/80">
                    <li class="flex items-start space-x-2">
                        <span class="badge badge-info badge-sm mt-0.5">1</span>
                        <span>Check your email inbox (and spam folder)</span>
                    </li>
                    <li class="flex items-start space-x-2">
                        <span class="badge badge-info badge-sm mt-0.5">2</span>
                        <span>Click the reset link in the email</span>
                    </li>
                    <li class="flex items-start space-x-2">
                        <span class="badge badge-info badge-sm mt-0.5">3</span>
                        <span>Create a new secure password</span>
                    </li>
                </ol>
            </div>

            <!-- Action Buttons -->
            <div class="space-y-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-full">
                    <i class="fas fa-sign-in-alt mr-2"></i>
                    Back to Sign In
                </a>
                
                <button onclick="window.location.reload()" class="btn btn-outline btn-sm w-full">
                    <i class="fas fa-redo mr-2"></i>
                    Didn't receive email? Try again
                </button>
            </div>

            <!-- Additional Help -->
            <div class="mt-8 text-xs text-base-content/60">
                <p class="mb-2">
                    <i class="fas fa-clock mr-1"></i>
                    The reset link will expire in 24 hours
                </p>
                <p>
                    Need help? 
                    <a asp-controller="Home" asp-action="Contact" class="link link-primary">Contact Support</a>
                </p>
            </div>
        </div>
    </div>
</div>
