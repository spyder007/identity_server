@using System.Linq
@using Spydersoft.Identity.Models.Identity
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Sign In";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-purple-50 flex items-center justify-center p-4">
    <div class="card bg-base-100 shadow-2xl max-w-4xl w-full overflow-hidden">
        <div class="grid lg:grid-cols-2 gap-0">
            <!-- Left Side - Welcome Panel -->
            <div class="hidden lg:flex bg-gradient-to-br from-primary to-secondary p-12 items-center justify-center text-white">
                <div class="text-center">
                    <div class="avatar mb-8">
                        <div class="w-24 rounded-full bg-white/20">
                            <img src="~/images/logo/logo.svg" alt="Spydersoft Logo" class="p-4" />
                        </div>
                    </div>
                    <h1 class="text-4xl font-bold mb-4">Welcome Back!</h1>
                    <p class="text-xl text-white/90 mb-8">
                        Sign in to your account to continue accessing your applications
                    </p>
                    <div class="flex justify-center">
                        <img src="~/images/auth/signin-image.svg" alt="Sign In" class="max-w-xs opacity-90" />
                    </div>
                </div>
            </div>

            <!-- Right Side - Login Form -->
            <div class="p-8 lg:p-12">
                <div class="max-w-md mx-auto">
                    <div class="text-center mb-8">
                        <h2 class="text-3xl font-bold text-gradient">Sign In</h2>
                        <p class="text-base-content/70 mt-2">Access your Spydersoft account</p>
                    </div>

                    <form asp-route-returnurl="@Model.ReturnUrl" method="post" class="space-y-6">
                        <!-- Validation Summary -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-error">
                                <i class="fas fa-exclamation-triangle"></i>
                                <div>
                                    <h3 class="font-bold">Authentication Error</h3>
                                    <div asp-validation-summary="All" class="text-sm"></div>
                                </div>
                            </div>
                        }

                        <!-- Username Field -->
                        <div class="form-control w-full">
                            <label class="label">
                                <span class="label-text font-medium">Email / Username</span>
                            </label>
                            <input asp-for="Username" 
                                   type="text" 
                                   class="input input-bordered w-full focus:input-primary" 
                                   placeholder="Enter your email or username" />
                            <label class="label">
                                <span asp-validation-for="Username" class="label-text-alt text-error"></span>
                            </label>
                        </div>

                        <!-- Password Field -->
                        <div class="form-control w-full">
                            <label class="label">
                                <span class="label-text font-medium">Password</span>
                            </label>
                            <input asp-for="Password" 
                                   type="password" 
                                   class="input input-bordered w-full focus:input-primary" 
                                   placeholder="Enter your password" />
                            <label class="label">
                                <span asp-validation-for="Password" class="label-text-alt text-error"></span>
                            </label>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div class="flex items-center justify-between">
                            <div class="form-control">
                                <label class="label cursor-pointer justify-start space-x-3">
                                    <input asp-for="RememberLogin" type="checkbox" class="checkbox checkbox-primary checkbox-sm" />
                                    <span class="label-text">@Html.DisplayNameFor(m => m.RememberLogin)</span>
                                </label>
                            </div>
                            <a asp-action="ForgotPassword" class="link link-primary text-sm">
                                Forgot Password?
                            </a>
                        </div>

                        <!-- Sign In Button -->
                        <button type="submit" 
                                name="button" 
                                value="login" 
                                class="btn btn-primary btn-lg w-full">
                            <i class="fas fa-sign-in-alt mr-2"></i>
                            Sign In
                        </button>
                    </form>

                    <!-- External Providers -->
                    @if (Model.VisibleExternalProviders.Any())
                    {
                        <div class="divider my-8">Or continue with</div>
                        <div class="grid grid-cols-1 gap-3">
                            @foreach (var provider in Model.VisibleExternalProviders)
                            {
                                <a class="btn btn-outline btn-sm"
                                   asp-controller="External"
                                   asp-action="Challenge"
                                   asp-route-scheme="@provider.AuthenticationScheme"
                                   asp-route-returnUrl="@Model.ReturnUrl">
                                    <i class="@provider.LniCssClass mr-2"></i>
                                    Continue with @provider.DisplayName
                                </a>
                            }
                        </div>
                    }

                    <!-- Register Link -->
                    <div class="text-center mt-8">
                        <p class="text-base-content/70">
                            Don't have an account?
                            <a asp-controller="Register" 
                               asp-action="Index" 
                               asp-route-returnurl="@Model.ReturnUrl" 
                               class="link link-primary font-medium">
                                Create an account
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
