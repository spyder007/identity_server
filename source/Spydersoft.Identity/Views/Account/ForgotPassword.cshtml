@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="min-h-screen bg-gradient-to-br from-orange-50 to-red-50 flex items-center justify-center p-4">
    <div class="card bg-base-100 shadow-2xl max-w-md w-full">
        <div class="card-body">
            <!-- Icon -->
            <div class="text-center mb-8">
                <div class="avatar mb-4">
                    <div class="w-20 rounded-full bg-warning/10">
                        <i class="fas fa-key text-warning text-3xl flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <h1 class="text-3xl font-bold text-gradient mb-2">Forgot Password?</h1>
                <p class="text-base-content/70">No worries! Enter your email and we'll send you reset instructions.</p>
            </div>

            <form asp-action="ForgotPassword" method="post" class="space-y-6">
                <!-- Validation Summary -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-triangle"></i>
                        <div>
                            <h3 class="font-bold">Validation Error</h3>
                            <div asp-validation-summary="All" class="text-sm"></div>
                        </div>
                    </div>
                }

                <!-- Email Field -->
                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text font-medium">Email Address</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-base-content/40"></i>
                        </div>
                        <input asp-for="Email" 
                               type="email" 
                               class="input input-bordered w-full pl-10 focus:input-primary" 
                               placeholder="Enter your email address" />
                    </div>
                    <label class="label">
                        <span asp-validation-for="Email" class="label-text-alt text-error"></span>
                        <span class="label-text-alt text-base-content/60">We'll send reset instructions to this email</span>
                    </label>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-lg w-full">
                    <i class="fas fa-paper-plane mr-2"></i>
                    Send Reset Instructions
                </button>
            </form>

            <!-- Back to Login -->
            <div class="divider">or</div>
            
            <div class="text-center">
                <p class="text-base-content/70 mb-4">Remember your password?</p>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline btn-sm">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Sign In
                </a>
            </div>

            <!-- Help Information -->
            <div class="mt-8 p-4 bg-info/10 rounded-lg">
                <div class="flex items-start space-x-3">
                    <i class="fas fa-info-circle text-info mt-1"></i>
                    <div class="text-sm">
                        <div class="font-medium mb-1">Having trouble?</div>
                        <ul class="text-base-content/70 space-y-1">
                            <li>• Check your spam folder for the reset email</li>
                            <li>• Make sure you're using the correct email address</li>
                            <li>• Contact support if you don't receive the email</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
