@model BaseModel
@{
    ViewData["Title"] = "Email Confirmation";
    var isSuccess = !string.IsNullOrEmpty(Model.Message) && !Model.Message.Contains("error", StringComparison.OrdinalIgnoreCase);
}

<div class="min-h-screen bg-gradient-to-br from-green-50 to-blue-50 flex items-center justify-center p-4">
    <div class="card bg-base-100 shadow-2xl max-w-md w-full">
        <div class="card-body text-center">
            <!-- Status Icon -->
            <div class="avatar mb-6">
                @if (isSuccess)
                {
                    <div class="w-24 rounded-full bg-success/10">
                        <i class="fas fa-check-circle text-success text-4xl flex items-center justify-center h-full"></i>
                    </div>
                }
                else
                {
                    <div class="w-24 rounded-full bg-error/10">
                        <i class="fas fa-exclamation-triangle text-error text-4xl flex items-center justify-center h-full"></i>
                    </div>
                }
            </div>

            <!-- Title -->
            <h1 class="text-3xl font-bold mb-4">
                @if (isSuccess)
                {
                    <span class="text-success">Email Confirmed!</span>
                }
                else
                {
                    <span class="text-error">Confirmation Failed</span>
                }
            </h1>

            <!-- Message -->
            <div class="mb-8">
                @if (isSuccess)
                {
                    <p class="text-lg text-base-content/80 mb-4">
                        Your email address has been successfully verified.
                    </p>
                    <div class="bg-success/10 p-4 rounded-lg">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-shield-check text-success"></i>
                            <div class="text-left">
                                <div class="font-medium text-sm">Account Activated</div>
                                <div class="text-xs text-base-content/70">
                                    You can now access all features
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-lg text-base-content/80 mb-4">
                        We couldn't verify your email address.
                    </p>
                    <div class="bg-error/10 p-4 rounded-lg">
                        <div class="text-sm text-left">
                            <div class="font-medium mb-2">@Model.Message</div>
                            <div class="text-xs text-base-content/70">
                                The confirmation link may have expired or already been used.
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="space-y-4">
                @if (isSuccess)
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-full">
                        <i class="fas fa-sign-in-alt mr-2"></i>
                        Sign In to Your Account
                    </a>
                    
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline btn-sm w-full">
                        <i class="fas fa-home mr-2"></i>
                        Return to Homepage
                    </a>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="Index" class="btn btn-primary btn-lg w-full">
                        <i class="fas fa-envelope mr-2"></i>
                        Resend Confirmation Email
                    </a>
                    
                    <div class="flex space-x-2">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline flex-1">
                            <i class="fas fa-sign-in-alt mr-2"></i>
                            Sign In
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline flex-1">
                            <i class="fas fa-home mr-2"></i>
                            Home
                        </a>
                    </div>
                }
            </div>

            @if (isSuccess)
            {
                <!-- Success Features -->
                <div class="mt-8 space-y-3">
                    <div class="text-sm font-medium mb-3">What's Next?</div>
                    <div class="flex items-center space-x-3 text-sm text-base-content/70">
                        <i class="fas fa-check text-success"></i>
                        <span>Access your profile and settings</span>
                    </div>
                    <div class="flex items-center space-x-3 text-sm text-base-content/70">
                        <i class="fas fa-check text-success"></i>
                        <span>Connect with external applications</span>
                    </div>
                    <div class="flex items-center space-x-3 text-sm text-base-content/70">
                        <i class="fas fa-check text-success"></i>
                        <span>Enable two-factor authentication</span>
                    </div>
                </div>
            }
            else
            {
                <!-- Error Help -->
                <div class="mt-8 p-4 bg-info/10 rounded-lg">
                    <div class="text-sm">
                        <div class="font-medium mb-2 flex items-center">
                            <i class="fas fa-lightbulb text-info mr-2"></i>
                            Troubleshooting Tips
                        </div>
                        <ul class="text-left text-xs text-base-content/70 space-y-1">
                            <li>• Check your email for a newer confirmation link</li>
                            <li>• Ensure you clicked the complete link from the email</li>
                            <li>• Try requesting a new confirmation email</li>
                        </ul>
                    </div>
                </div>
            }

            <!-- Contact Support -->
            <div class="mt-6 text-xs text-base-content/60">
                Need assistance? 
                <a asp-controller="Home" asp-action="Contact" class="link link-primary">Contact Support</a>
            </div>
        </div>
    </div>
</div>
