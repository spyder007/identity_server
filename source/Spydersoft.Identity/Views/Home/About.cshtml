@using Spydersoft.Identity.Models.Home;
@model AboutDataViewModel;

<div class="identity-server-dashboard">
    <!-- Page Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">About Identity Server</h1>
        <p class="dashboard-subtitle">Technology stack and libraries powering this application</p>
    </div>

    <!-- Libraries Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- NPM Libraries Card -->
        <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-shadow duration-300">
            <div class="card-body">
                <div class="flex items-center space-x-3 mb-4">
                    <div class="avatar">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-orange-400 to-red-500 flex items-center justify-center">
                            <i class="fab fa-npm text-white text-xl"></i>
                        </div>
                    </div>
                    <div>
                        <h2 class="card-title text-2xl">Frontend Libraries</h2>
                        <p class="text-base-content/70">NPM packages and UI frameworks</p>
                    </div>
                </div>
                
                <div class="space-y-2">
                    @if (Model?.UiLibraries?.Any() == true)
                    {
                        @foreach (var library in Model.UiLibraries)
                        {
                            <a href="@library.Url" target="_blank" class="flex items-center justify-between p-3 rounded-lg hover:bg-primary/10 transition-colors group">
                                <div class="flex items-center space-x-3">
                                    <div class="w-2 h-2 bg-primary rounded-full"></div>
                                    <span class="font-medium">@library.Name</span>
                                </div>
                                <i class="fas fa-external-link-alt text-xs text-base-content/50 group-hover:text-primary transition-colors"></i>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <span>No UI libraries data available</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- .NET Libraries Card -->
        <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-shadow duration-300">
            <div class="card-body">
                <div class="flex items-center space-x-3 mb-4">
                    <div class="avatar">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-blue-600 flex items-center justify-center">
                            <i class="fab fa-microsoft text-white text-xl"></i>
                        </div>
                    </div>
                    <div>
                        <h2 class="card-title text-2xl">.NET Libraries</h2>
                        <p class="text-base-content/70">NuGet packages and frameworks</p>
                    </div>
                </div>
                
                <div class="space-y-2">
                    @if (Model?.NetLibraries?.Any() == true)
                    {
                        @foreach (var library in Model.NetLibraries)
                        {
                            <a href="@library.Url" target="_blank" class="flex items-center justify-between p-3 rounded-lg hover:bg-secondary/10 transition-colors group">
                                <div class="flex items-center space-x-3">
                                    <div class="w-2 h-2 bg-secondary rounded-full"></div>
                                    <span class="font-medium">@library.Name</span>
                                </div>
                                <i class="fas fa-external-link-alt text-xs text-base-content/50 group-hover:text-secondary transition-colors"></i>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <span>No .NET libraries data available</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Technology Stack Overview -->
    <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body">
            <div class="flex items-center space-x-3 mb-6">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-green-400 to-blue-500 flex items-center justify-center">
                        <i class="fas fa-server text-white text-xl"></i>
                    </div>
                </div>
                <div>
                    <h2 class="card-title text-2xl">Architecture Overview</h2>
                    <p class="text-base-content/70">Core technologies and frameworks</p>
                </div>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
                <div class="badge badge-lg badge-primary gap-2 p-4">
                    <i class="fab fa-microsoft-edge"></i>
                    ASP.NET Core 9.0
                </div>
                <div class="badge badge-lg badge-secondary gap-2 p-4">
                    <i class="fas fa-bolt"></i>
                    Tailwind CSS
                </div>
                <div class="badge badge-lg badge-accent gap-2 p-4">
                    <i class="fas fa-palette"></i>
                    DaisyUI
                </div>
                <div class="badge badge-lg badge-success gap-2 p-4">
                    <i class="fas fa-shield-alt"></i>
                    IdentityServer
                </div>
                <div class="badge badge-lg badge-info gap-2 p-4">
                    <i class="fas fa-database"></i>
                    PostgreSQL
                </div>
                <div class="badge badge-lg badge-warning gap-2 p-4">
                    <i class="fas fa-code"></i>
                    Entity Framework
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Information -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <div>
                <h3 class="font-bold">Modern Technology Stack</h3>
                <div class="text-xs">Built with the latest .NET 9, Tailwind CSS, and DaisyUI for optimal performance and user experience.</div>
            </div>
        </div>
        
        <div class="alert alert-info">
            <i class="fas fa-rocket"></i>
            <div>
                <h3 class="font-bold">Production Ready</h3>
                <div class="text-xs">Scalable, secure, and maintainable identity solution for enterprise applications.</div>
            </div>
        </div>
    </div>
</div>
