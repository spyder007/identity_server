@using Spydersoft.Identity.Models.Admin.ScopeViewModels
@model ScopeViewModel

<div class="identity-server-dashboard">
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-accent to-primary">
                        <i class="fas fa-key text-white flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <div>
                    <h1 class="dashboard-title">
                        @if (Model.Id == 0)
                        {
                            <span>Create Scope</span>
                        }
                        else
                        {
                            <span>Edit Scope: @Model.Name</span>
                        }
                    </h1>
                    <p class="dashboard-subtitle">Configure OAuth 2.0 scope for access control</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <a asp-controller="Scopes" asp-action="Index" class="btn btn-outline">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Scopes
                </a>
            </div>
        </div>
    </div>

    <form asp-action="Edit" class="space-y-8">
        <!-- Navigation Bar -->
        @await Html.PartialAsync("_scopeNavBar", Model.NavBar)

        <!-- Validation Summary -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-triangle"></i>
                <div>
                    <h3 class="font-bold">Please correct the following errors:</h3>
                    <div asp-validation-summary="ModelOnly" class="text-sm"></div>
                </div>
            </div>
        }

        <!-- Main Configuration Card -->
        <div class="card bg-base-100 shadow-xl border border-base-300">
            <div class="card-body">
                <div class="flex items-center space-x-3 mb-8">
                    <div class="avatar">
                        <div class="w-16 h-16 rounded-full bg-gradient-to-br from-accent to-primary">
                            <i class="fas fa-key text-white text-2xl flex items-center justify-center h-full"></i>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-3xl font-bold text-gradient">Scope Configuration</h2>
                        <p class="text-base-content/70 text-lg">Define OAuth permission scope</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Basic Information -->
                    <div class="space-y-6">
                        <h3 class="text-xl font-semibold flex items-center mb-4">
                            <i class="fas fa-info-circle mr-2 text-primary"></i>
                            Basic Information
                        </h3>

                        <!-- Scope Name -->
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.Name)</span>
                                <span class="label-text-alt text-error">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-tag text-base-content/40"></i>
                                </div>
                                <input asp-for="Name" 
                                       type="text" 
                                       class="input input-bordered w-full pl-10 focus:input-primary" 
                                       placeholder="read:users" />
                            </div>
                            <label class="label">
                                <span asp-validation-for="Name" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Unique scope identifier (e.g., read:data, write:users)</span>
                            </label>
                        </div>

                        <!-- Display Name -->
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.DisplayName)</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-signature text-base-content/40"></i>
                                </div>
                                <input asp-for="DisplayName" 
                                       type="text" 
                                       class="input input-bordered w-full pl-10 focus:input-primary" 
                                       placeholder="Read User Data" />
                            </div>
                            <label class="label">
                                <span asp-validation-for="DisplayName" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Human-readable name for the scope</span>
                            </label>
                        </div>

                        <!-- Description -->
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.Description)</span>
                            </label>
                            <textarea asp-for="Description" 
                                     class="textarea textarea-bordered focus:textarea-primary" 
                                     placeholder="Detailed description of what this scope allows..."
                                     rows="4"></textarea>
                            <label class="label">
                                <span asp-validation-for="Description" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Explain what permissions this scope grants</span>
                            </label>
                        </div>
                    </div>

                    <!-- Configuration & Settings -->
                    <div class="space-y-6">
                        <h3 class="text-xl font-semibold flex items-center mb-4">
                            <i class="fas fa-cogs mr-2 text-secondary"></i>
                            Scope Settings
                        </h3>

                        <!-- Core Settings Card -->
                        <div class="card bg-base-200 border border-base-300">
                            <div class="card-body p-6">
                                <h4 class="font-semibold mb-4 flex items-center">
                                    <i class="fas fa-toggle-on mr-2 text-success"></i>
                                    Core Settings
                                </h4>
                                
                                <!-- Enabled Toggle -->
                                <div class="form-control mb-4">
                                    <label class="label cursor-pointer">
                                        <div>
                                            <span class="label-text font-medium">@Html.DisplayNameFor(m => m.Enabled)</span>
                                            <div class="text-xs text-base-content/60">Enable or disable this scope</div>
                                        </div>
                                        <input asp-for="Enabled" type="checkbox" class="toggle toggle-success toggle-lg" />
                                    </label>
                                </div>

                                <!-- Required Toggle -->
                                <div class="form-control mb-4">
                                    <label class="label cursor-pointer">
                                        <div>
                                            <span class="label-text font-medium">@Html.DisplayNameFor(m => m.Required)</span>
                                            <div class="text-xs text-base-content/60">This scope is mandatory</div>
                                        </div>
                                        <input asp-for="Required" type="checkbox" class="toggle toggle-info" />
                                    </label>
                                </div>

                                <!-- Emphasize Toggle -->
                                <div class="form-control">
                                    <label class="label cursor-pointer">
                                        <div>
                                            <span class="label-text font-medium">@Html.DisplayNameFor(m => m.Emphasize)</span>
                                            <div class="text-xs text-base-content/60">Highlight in consent screen</div>
                                        </div>
                                        <input asp-for="Emphasize" type="checkbox" class="toggle toggle-warning" />
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Discovery Settings Card -->
                        <div class="card bg-base-200 border border-base-300">
                            <div class="card-body p-6">
                                <h4 class="font-semibold mb-4 flex items-center">
                                    <i class="fas fa-globe mr-2 text-info"></i>
                                    Discovery Settings
                                </h4>
                                
                                <!-- Show in Discovery Document -->
                                <div class="form-control">
                                    <label class="label cursor-pointer">
                                        <div>
                                            <span class="label-text font-medium">@Html.DisplayNameFor(m => m.ShowInDiscoveryDocument)</span>
                                            <div class="text-xs text-base-content/60">Include in OpenID discovery document</div>
                                        </div>
                                        <input asp-for="ShowInDiscoveryDocument" type="checkbox" class="toggle toggle-primary" />
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Guidelines Card -->
                        <div class="card bg-info/10 border border-info/20">
                            <div class="card-body p-6">
                                <h4 class="font-semibold mb-3 flex items-center">
                                    <i class="fas fa-lightbulb mr-2 text-info"></i>
                                    Scope Design Guidelines
                                </h4>
                                <ul class="space-y-2 text-sm text-base-content/80">
                                    <li class="flex items-start space-x-2">
                                        <i class="fas fa-check text-info text-xs mt-1"></i>
                                        <span>Use clear, descriptive names (e.g., read:users, write:orders)</span>
                                    </li>
                                    <li class="flex items-start space-x-2">
                                        <i class="fas fa-check text-info text-xs mt-1"></i>
                                        <span>Follow the principle of least privilege</span>
                                    </li>
                                    <li class="flex items-start space-x-2">
                                        <i class="fas fa-check text-info text-xs mt-1"></i>
                                        <span>Group related permissions into logical scopes</span>
                                    </li>
                                    <li class="flex items-start space-x-2">
                                        <i class="fas fa-check text-info text-xs mt-1"></i>
                                        <span>Required scopes cannot be deselected by users</span>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        @if (Model.Id != 0)
                        {
                            <!-- Scope Statistics -->
                            <div class="card bg-base-200 border border-base-300">
                                <div class="card-body p-6">
                                    <h4 class="font-semibold mb-4 flex items-center">
                                        <i class="fas fa-chart-bar mr-2 text-primary"></i>
                                        Scope Information
                                    </h4>
                                    <div class="space-y-3 text-sm">
                                        <div class="flex justify-between">
                                            <span class="text-base-content/70">Scope ID:</span>
                                            <span class="font-mono">@Model.Id</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="card bg-base-100 shadow-xl border border-base-300">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-base-content/70">
                        @if (Model.Id != 0)
                        {
                            <span>Editing Scope: @Model.Name</span>
                        }
                        else
                        {
                            <span>Creating new OAuth scope</span>
                        }
                    </div>
                    <div class="flex space-x-3">
                        <a asp-controller="Scopes" asp-action="Index" class="btn btn-outline">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save mr-2"></i>
                            @(Model.Id == 0 ? "Create Scope" : "Save Changes")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
