@using Spydersoft.Identity.Models.Admin.ApiResourceViewModels
@model ApiResourceViewModel

<div class="identity-server-dashboard">
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-info to-primary">
                        <i class="fas fa-server text-white flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <div>
                    <h1 class="dashboard-title">
                        @if (Model.Id == 0)
                        {
                            <span>Create API Resource</span>
                        }
                        else
                        {
                            <span>Edit API Resource: @Model.Name</span>
                        }
                    </h1>
                    <p class="dashboard-subtitle">Configure API resource for backend service protection</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <a asp-controller="ApiResources" asp-action="Index" class="btn btn-outline">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to API Resources
                </a>
            </div>
        </div>
    </div>

    <form asp-action="Edit" class="space-y-8">
        <!-- Navigation Bar -->
        @await Html.PartialAsync("_apiNavBar", Model.NavBar)

        <!-- Validation Summary -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-triangle"></i>
                <div>
                    <h3 class="font-bold">Please correct the following errors:</h3>
                    <div asp-validation-summary="ModelOnly" class="text-sm"></div>
                </div>
            </div>
        }

        <!-- Main Configuration Card -->
        <div class="card bg-base-100 shadow-xl border border-base-300">
            <div class="card-body">
                <div class="flex items-center space-x-3 mb-8">
                    <div class="avatar">
                        <div class="w-16 h-16 rounded-full bg-gradient-to-br from-info to-primary">
                            <i class="fas fa-server text-white text-2xl flex items-center justify-center h-full"></i>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-3xl font-bold text-gradient">API Resource Configuration</h2>
                        <p class="text-base-content/70 text-lg">Define your backend service resource</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Basic Information -->
                    <div class="space-y-6">
                        <h3 class="text-xl font-semibold flex items-center mb-4">
                            <i class="fas fa-info-circle mr-2 text-primary"></i>
                            Basic Information
                        </h3>

                        <!-- Resource Name -->
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.Name)</span>
                                <span class="label-text-alt text-error">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-tag text-base-content/40"></i>
                                </div>
                                <input asp-for="Name" 
                                       type="text" 
                                       class="input input-bordered w-full pl-10 focus:input-primary" 
                                       placeholder="my-api" />
                            </div>
                            <label class="label">
                                <span asp-validation-for="Name" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Unique identifier for the API resource</span>
                            </label>
                        </div>

                        <!-- Display Name -->
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.DisplayName)</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-signature text-base-content/40"></i>
                                </div>
                                <input asp-for="DisplayName" 
                                       type="text" 
                                       class="input input-bordered w-full pl-10 focus:input-primary" 
                                       placeholder="My API Service" />
                            </div>
                            <label class="label">
                                <span asp-validation-for="DisplayName" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Human-readable name for the API</span>
                            </label>
                        </div>

                        <!-- Description -->
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.Description)</span>
                            </label>
                            <textarea asp-for="Description" 
                                     class="textarea textarea-bordered focus:textarea-primary" 
                                     placeholder="Detailed description of the API resource..."
                                     rows="4"></textarea>
                            <label class="label">
                                <span asp-validation-for="Description" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Optional description of the API</span>
                            </label>
                        </div>
                    </div>

                    <!-- Configuration & Settings -->
                    <div class="space-y-6">
                        <h3 class="text-xl font-semibold flex items-center mb-4">
                            <i class="fas fa-cogs mr-2 text-secondary"></i>
                            Settings
                        </h3>

                        <!-- Status Settings Card -->
                        <div class="card bg-base-200 border border-base-300">
                            <div class="card-body p-6">
                                <h4 class="font-semibold mb-4 flex items-center">
                                    <i class="fas fa-toggle-on mr-2 text-success"></i>
                                    Resource Status
                                </h4>
                                
                                <!-- Enabled Toggle -->
                                <div class="form-control mb-4">
                                    <label class="label cursor-pointer">
                                        <div>
                                            <span class="label-text font-medium">@Html.DisplayNameFor(m => m.Enabled)</span>
                                            <div class="text-xs text-base-content/60">Enable or disable this API resource</div>
                                        </div>
                                        <input asp-for="Enabled" type="checkbox" class="toggle toggle-success toggle-lg" />
                                    </label>
                                </div>

                                <!-- Non-Editable Toggle -->
                                <div class="form-control">
                                    <label class="label cursor-pointer">
                                        <div>
                                            <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NonEditable)</span>
                                            <div class="text-xs text-base-content/60">Prevent future modifications</div>
                                        </div>
                                        <input asp-for="NonEditable" type="checkbox" class="toggle toggle-warning" />
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Information Card -->
                        <div class="card bg-info/10 border border-info/20">
                            <div class="card-body p-6">
                                <h4 class="font-semibold mb-3 flex items-center">
                                    <i class="fas fa-lightbulb mr-2 text-info"></i>
                                    API Resource Guidelines
                                </h4>
                                <ul class="space-y-2 text-sm text-base-content/80">
                                    <li class="flex items-start space-x-2">
                                        <i class="fas fa-check text-info text-xs mt-1"></i>
                                        <span>Use descriptive names that identify your backend service</span>
                                    </li>
                                    <li class="flex items-start space-x-2">
                                        <i class="fas fa-check text-info text-xs mt-1"></i>
                                        <span>API resources represent protected backend services</span>
                                    </li>
                                    <li class="flex items-start space-x-2">
                                        <i class="fas fa-check text-info text-xs mt-1"></i>
                                        <span>Define scopes to control access granularity</span>
                                    </li>
                                    <li class="flex items-start space-x-2">
                                        <i class="fas fa-check text-info text-xs mt-1"></i>
                                        <span>Use claims to include additional user information</span>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        @if (Model.Id != 0)
                        {
                            <!-- Resource Statistics -->
                            <div class="card bg-base-200 border border-base-300">
                                <div class="card-body p-6">
                                    <h4 class="font-semibold mb-4 flex items-center">
                                        <i class="fas fa-chart-bar mr-2 text-primary"></i>
                                        Resource Information
                                    </h4>
                                    <div class="space-y-3 text-sm">
                                        <div class="flex justify-between">
                                            <span class="text-base-content/70">Resource ID:</span>
                                            <span class="font-mono">@Model.Id</span>
                                        </div>
                                        <div class="flex justify-between">
                                            <span class="text-base-content/70">Created:</span>
                                            <span>@Model.Created.ToString("MMM dd, yyyy")</span>
                                        </div>
                                        @if (Model.Updated != default(DateTime))
                                        {
                                            <div class="flex justify-between">
                                                <span class="text-base-content/70">Last Updated:</span>
                                                <span>@Model.Updated.ToString("MMM dd, yyyy")</span>
                                            </div>
                                        }
                                        @if (Model.LastAccessed != default(DateTime))
                                        {
                                            <div class="flex justify-between">
                                                <span class="text-base-content/70">Last Accessed:</span>
                                                <span>@Model.LastAccessed.ToString("MMM dd, yyyy")</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="card bg-base-100 shadow-xl border border-base-300">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-base-content/70">
                        @if (Model.Id != 0)
                        {
                            <span>Editing API Resource: @Model.Name</span>
                        }
                        else
                        {
                            <span>Creating new API resource</span>
                        }
                    </div>
                    <div class="flex space-x-3">
                        <a asp-controller="ApiResources" asp-action="Index" class="btn btn-outline">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save mr-2"></i>
                            @(Model.Id == 0 ? "Create API Resource" : "Save Changes")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}