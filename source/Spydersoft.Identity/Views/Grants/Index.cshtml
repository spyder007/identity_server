@model Spydersoft.Identity.Models.Grants.GrantsViewModel

<div class="min-h-screen bg-base-200 p-4">
    <div class="max-w-6xl mx-auto">
        <!-- Page Header -->
        <div class="mb-8">
            <div class="flex items-center space-x-3 mb-4">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-secondary">
                        <i class="fas fa-shield-alt text-white flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-base-content">Application Permissions</h1>
                    <p class="text-base-content/70">Manage access permissions for connected applications</p>
                </div>
            </div>
            
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <span>Below is the list of applications you have given permission to and the resources they have access to.</span>
            </div>
        </div>

        @if (!Model.Grants.Any())
        {
            <!-- Empty State -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body text-center py-16">
                    <div class="avatar mb-6">
                        <div class="w-24 rounded-full bg-base-200">
                            <i class="fas fa-shield-alt text-4xl text-base-content/30 flex items-center justify-center h-full"></i>
                        </div>
                    </div>
                    <h2 class="text-2xl font-semibold mb-4">No Application Permissions</h2>
                    <p class="text-base-content/70 mb-6">You haven't granted access to any applications yet.</p>
                    <div class="text-sm text-base-content/60">
                        When you sign in to applications using this identity provider, they will appear here.
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Grants Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                @foreach (var grant in Model.Grants)
                {
                    <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-shadow">
                        <!-- Card Header -->
                        <div class="card-body border-b border-base-300 pb-4">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    @if (grant.ClientLogoUrl != null)
                                    {
                                        <div class="avatar">
                                            <div class="w-12 h-12 rounded-full bg-base-200 border border-base-300">
                                                <img src="@grant.ClientLogoUrl" alt="@grant.ClientName Logo" class="w-full h-full object-cover rounded-full" />
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="avatar">
                                            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-accent to-secondary">
                                                <i class="fas fa-cube text-white flex items-center justify-center h-full"></i>
                                            </div>
                                        </div>
                                    }
                                    <div>
                                        <h3 class="card-title text-lg">@grant.ClientName</h3>
                                        <div class="text-sm text-base-content/60">Connected Application</div>
                                    </div>
                                </div>
                                
                                <form asp-action="Revoke" class="flex">
                                    <input type="hidden" name="clientId" value="@grant.ClientId">
                                    <button type="button" 
                                            onclick="confirmRevoke('@grant.ClientId', '@grant.ClientName')"
                                            class="btn btn-error btn-sm">
                                        <i class="fas fa-times mr-2"></i>
                                        Revoke Access
                                    </button>
                                </form>
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body pt-4">
                            <div class="space-y-4">
                                @if (!string.IsNullOrEmpty(grant.Description))
                                {
                                    <div class="bg-base-200 p-3 rounded">
                                        <div class="text-sm font-medium text-base-content/70 mb-1">Description</div>
                                        <div class="text-sm">@grant.Description</div>
                                    </div>
                                }

                                <!-- Grant Details -->
                                <div class="grid grid-cols-2 gap-4 text-sm">
                                    <div class="bg-base-200 p-3 rounded">
                                        <div class="text-xs font-medium text-base-content/70 mb-1">Created</div>
                                        <div class="font-mono">@grant.Created.ToString("MMM dd, yyyy")</div>
                                    </div>
                                    
                                    @if (grant.Expires.HasValue)
                                    {
                                        <div class="bg-base-200 p-3 rounded">
                                            <div class="text-xs font-medium text-base-content/70 mb-1">Expires</div>
                                            <div class="font-mono @(grant.Expires.Value < DateTime.UtcNow ? "text-error" : "")">
                                                @grant.Expires.Value.ToString("MMM dd, yyyy")
                                                @if (grant.Expires.Value < DateTime.UtcNow)
                                                {
                                                    <span class="badge badge-error badge-sm ml-1">EXPIRED</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="bg-base-200 p-3 rounded">
                                            <div class="text-xs font-medium text-base-content/70 mb-1">Expires</div>
                                            <div class="text-success">Never</div>
                                        </div>
                                    }
                                </div>

                                <!-- Identity Grants -->
                                @if (grant.IdentityGrantNames.Any())
                                {
                                    <div>
                                        <div class="flex items-center space-x-2 mb-3">
                                            <i class="fas fa-user text-primary"></i>
                                            <span class="font-medium">Identity Permissions</span>
                                        </div>
                                        <div class="grid grid-cols-2 gap-2">
                                            @foreach (var name in grant.IdentityGrantNames)
                                            {
                                                <div class="badge badge-primary badge-sm">
                                                    <i class="fas fa-check mr-1"></i>
                                                    @name
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                <!-- API Grants -->
                                @if (grant.ApiGrantNames.Any())
                                {
                                    <div>
                                        <div class="flex items-center space-x-2 mb-3">
                                            <i class="fas fa-cogs text-secondary"></i>
                                            <span class="font-medium">API Permissions</span>
                                        </div>
                                        <div class="grid grid-cols-2 gap-2">
                                            @foreach (var name in grant.ApiGrantNames)
                                            {
                                                <div class="badge badge-secondary badge-sm">
                                                    <i class="fas fa-key mr-1"></i>
                                                    @name
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                <!-- Security Status -->
                                <div class="divider text-xs">Security Status</div>
                                <div class="flex items-center justify-between text-sm">
                                    <div class="flex items-center space-x-2">
                                        @if (grant.Expires.HasValue && grant.Expires.Value < DateTime.UtcNow)
                                        {
                                            <i class="fas fa-exclamation-triangle text-warning"></i>
                                            <span class="text-warning">Access Expired</span>
                                        }
                                        else
                                        {
                                            <i class="fas fa-shield-check text-success"></i>
                                            <span class="text-success">Access Active</span>
                                        }
                                    </div>
                                    <div class="text-xs text-base-content/60">
                                        Total Permissions: @(grant.IdentityGrantNames.Count() + grant.ApiGrantNames.Count())
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Summary Information -->
            <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="card bg-base-100 shadow-lg border border-base-300">
                    <div class="card-body text-center">
                        <div class="stat">
                            <div class="stat-title">Connected Apps</div>
                            <div class="stat-value text-primary">@Model.Grants.Count()</div>
                            <div class="stat-desc">Total applications</div>
                        </div>
                    </div>
                </div>
                
                <div class="card bg-base-100 shadow-lg border border-base-300">
                    <div class="card-body text-center">
                        <div class="stat">
                            <div class="stat-title">Active Grants</div>
                            <div class="stat-value text-success">@Model.Grants.Count(g => !g.Expires.HasValue || g.Expires.Value > DateTime.UtcNow)</div>
                            <div class="stat-desc">Currently active</div>
                        </div>
                    </div>
                </div>
                
                <div class="card bg-base-100 shadow-lg border border-base-300">
                    <div class="card-body text-center">
                        <div class="stat">
                            <div class="stat-title">Expired Grants</div>
                            <div class="stat-value text-warning">@Model.Grants.Count(g => g.Expires.HasValue && g.Expires.Value < DateTime.UtcNow)</div>
                            <div class="stat-desc">Need attention</div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Security Information -->
        <div class="mt-8 card bg-base-100 shadow-xl border border-base-300">
            <div class="card-body">
                <h3 class="card-title mb-4">
                    <i class="fas fa-shield-alt mr-2 text-info"></i>
                    About Application Permissions
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
                    <div>
                        <h4 class="font-semibold mb-2">What are application permissions?</h4>
                        <ul class="space-y-1 text-base-content/70">
                            <li>• Permissions you've granted to applications</li>
                            <li>• Control what data apps can access</li>
                            <li>• Can be revoked at any time</li>
                            <li>• May include identity and API access</li>
                        </ul>
                    </div>
                    <div>
                        <h4 class="font-semibold mb-2">Managing your permissions</h4>
                        <ul class="space-y-1 text-base-content/70">
                            <li>• Review permissions regularly</li>
                            <li>• Revoke access for unused apps</li>
                            <li>• Check for expired permissions</li>
                            <li>• Report suspicious applications</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Revoke Confirmation Modal -->
<dialog id="revokeModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">
            <i class="fas fa-exclamation-triangle text-warning mr-2"></i>
            Revoke Application Access
        </h3>
        <p class="py-4">
            Are you sure you want to revoke access for <strong id="revokeAppName"></strong>?
            <br><br>This will immediately stop the application from accessing your data. You can re-authorize the application later if needed.
        </p>
        <div class="modal-action">
            <form method="dialog">
                <button class="btn">Cancel</button>
            </form>
            <form asp-action="Revoke" method="post" style="display: inline;">
                <input type="hidden" name="clientId" id="revokeClientId" value="">
                <button type="submit" class="btn btn-error">
                    <i class="fas fa-times mr-2"></i>
                    Revoke Access
                </button>
            </form>
        </div>
    </div>
</dialog>

@section Scripts {
    <script>
        function confirmRevoke(clientId, clientName) {
            document.getElementById('revokeAppName').textContent = clientName;
            document.getElementById('revokeClientId').value = clientId;
            document.getElementById('revokeModal').showModal();
        }
    </script>
}