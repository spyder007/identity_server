@using Spydersoft.Identity.Models.Admin.ClientViewModels
@model ClientSecretsViewModel

<div class="identity-server-dashboard">
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-error to-warning">
                        <i class="fas fa-shield-alt text-white flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <div>
                    <h1 class="dashboard-title">Client Secrets</h1>
                    <p class="dashboard-subtitle">Manage authentication credentials for confidential clients</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <a asp-controller="Clients" asp-action="Edit" asp-route-id="@Model.NavBar.Id" class="btn btn-outline">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Client
                </a>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    @await Html.PartialAsync("_clientNavBar", Model.NavBar)

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Client Secrets Management -->
        <div class="lg:col-span-2">
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="avatar">
                            <div class="w-10 h-10 rounded-full bg-error/10">
                                <i class="fas fa-shield-alt text-error flex items-center justify-center h-full"></i>
                            </div>
                        </div>
                        <div>
                            <h2 class="card-title text-xl">Client Secrets</h2>
                            <p class="text-base-content/70">Authentication credentials for secure client communication</p>
                        </div>
                    </div>

                    @if (Model.ItemsList.Any())
                    {
                        <!-- Existing Secrets -->
                        <div class="space-y-4 mb-6">
                            @foreach (var clientSecret in Model.ItemsList)
                            {
                                <div class="card bg-base-200 border border-base-300">
                                    <div class="card-body p-4">
                                        <div class="flex items-start justify-between">
                                            <div class="flex-1 space-y-2">
                                                <div class="flex items-center space-x-3">
                                                    <div class="avatar">
                                                        <div class="w-8 h-8 rounded-full bg-success/10">
                                                            <i class="fas fa-key text-success text-xs flex items-center justify-center h-full"></i>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div class="font-semibold">@clientSecret.Description</div>
                                                        <div class="text-xs text-base-content/60">@clientSecret.Type</div>
                                                    </div>
                                                </div>
                                                
                                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                                                    <div>
                                                        <span class="text-base-content/60">Secret Value:</span>
                                                        <div class="font-mono text-xs bg-base-300 p-2 rounded mt-1">
                                                            @(clientSecret.Value.Length > 20 ? clientSecret.Value.Substring(0, 20) + "..." : clientSecret.Value)
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <span class="text-base-content/60">Created:</span>
                                                        <div class="font-mono text-xs">@clientSecret.Created.ToString("MMM dd, yyyy")</div>
                                                        @if (clientSecret.Expiration.HasValue)
                                                        {
                                                            <span class="text-base-content/60">Expires:</span>
                                                            <div class="font-mono text-xs @(clientSecret.Expiration.Value < DateTime.UtcNow ? "text-error" : "")">
                                                                @clientSecret.Expiration.Value.ToString("MMM dd, yyyy")
                                                                @if (clientSecret.Expiration.Value < DateTime.UtcNow)
                                                                {
                                                                    <span class="badge badge-error badge-sm ml-1">EXPIRED</span>
                                                                }
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-base-content/60">Expires:</span>
                                                            <div class="text-xs text-success">Never</div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="flex space-x-2">
                                                <button onclick="copySecret('@clientSecret.Value')" 
                                                        class="btn btn-ghost btn-sm"
                                                        title="Copy secret">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                                <button onclick="confirmDelete('@clientSecret.Id', '@clientSecret.Description')" 
                                                        class="btn btn-error btn-sm" 
                                                        title="Delete secret">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-12 mb-6">
                            <div class="avatar mb-4">
                                <div class="w-24 rounded-full bg-base-200">
                                    <i class="fas fa-shield-alt text-4xl text-base-content/30 flex items-center justify-center h-full"></i>
                                </div>
                            </div>
                            <h3 class="text-lg font-semibold mb-2">No Client Secrets</h3>
                            <p class="text-base-content/70 mb-4">Add client secrets for confidential client authentication.</p>
                        </div>
                    }

                    <!-- Add New Secret Form -->
                    <form asp-action="Save" asp-route-id="@Model.Id" class="space-y-6">
                        <div class="divider">Add New Client Secret</div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Description -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.Description)</span>
                                    <span class="label-text-alt text-error">*</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-tag text-base-content/40"></i>
                                    </div>
                                    <input asp-for="NewItem.Description" 
                                           type="text" 
                                           class="input input-bordered w-full pl-10 focus:input-primary" 
                                           placeholder="Production API Secret" />
                                </div>
                                <label class="label">
                                    <span asp-validation-for="NewItem.Description" class="label-text-alt text-error"></span>
                                    <span class="label-text-alt text-base-content/60">Descriptive name for the secret</span>
                                </label>
                            </div>

                            <!-- Type (Read-only) -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.Type)</span>
                                </label>
                                <input asp-for="NewItem.Type" 
                                       type="text" 
                                       class="input input-bordered w-full bg-base-200" 
                                       readonly />
                                @Html.HiddenFor(model => model.NewItem.Type)
                                <label class="label">
                                    <span class="label-text-alt text-base-content/60">Secret type (SHA256/SHA512)</span>
                                </label>
                            </div>

                            <!-- Secret Value -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.Value)</span>
                                    <span class="label-text-alt text-error">*</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-key text-base-content/40"></i>
                                    </div>
                                    <input asp-for="NewItem.Value" 
                                           type="password" 
                                           class="input input-bordered w-full pl-10 focus:input-primary" 
                                           placeholder="Enter secret value" 
                                           id="secretValue" />
                                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                        <button type="button" onclick="toggleSecretVisibility()" class="btn btn-ghost btn-sm">
                                            <i class="fas fa-eye" id="secretToggleIcon"></i>
                                        </button>
                                    </div>
                                </div>
                                <label class="label">
                                    <span asp-validation-for="NewItem.Value" class="label-text-alt text-error"></span>
                                    <span class="label-text-alt text-base-content/60">Strong secret for client authentication</span>
                                </label>
                            </div>

                            <!-- Expiration -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.Expiration)</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-calendar text-base-content/40"></i>
                                    </div>
                                    <input asp-for="NewItem.Expiration" 
                                           type="datetime-local" 
                                           class="input input-bordered w-full pl-10 focus:input-primary" />
                                </div>
                                <label class="label">
                                    <span asp-validation-for="NewItem.Expiration" class="label-text-alt text-error"></span>
                                    <span class="label-text-alt text-base-content/60">Optional expiration date</span>
                                </label>
                            </div>

                            <!-- Created (Hidden/Read-only) -->
                            <input asp-for="NewItem.Created" type="hidden" />
                        </div>

                        <div class="card-actions justify-end">
                            <button type="button" onclick="generateSecret()" class="btn btn-outline">
                                <i class="fas fa-random mr-2"></i>
                                Generate Secret
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>
                                Add Client Secret
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Information Sidebar -->
        <div class="space-y-6">
            <!-- Statistics -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-chart-bar mr-2 text-primary"></i>
                        Statistics
                    </h3>
                    <div class="space-y-2">
                        <div class="stat">
                            <div class="stat-title">Total Secrets</div>
                            <div class="stat-value text-primary">@Model.ItemsList.Count()</div>
                        </div>
                        <div class="stat">
                            <div class="stat-title">Expired</div>
                            <div class="stat-value text-error">@Model.ItemsList.Count(s => s.Expiration.HasValue && s.Expiration.Value < DateTime.UtcNow)</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Guidelines -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-shield-alt mr-2 text-error"></i>
                        Security Guidelines
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Use strong, randomly generated secrets</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Set expiration dates for secrets</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Rotate secrets regularly</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Store secrets securely in production</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Remove unused or expired secrets</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Secret Types -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-info-circle mr-2 text-info"></i>
                        Secret Types
                    </h3>
                    <div class="space-y-3 text-sm">
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-1">SharedSecret</div>
                            <div class="text-xs text-base-content/60">Standard HMAC-based secret</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-1">X509Thumbprint</div>
                            <div class="text-xs text-base-content/60">Certificate thumbprint</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-1">X509Name</div>
                            <div class="text-xs text-base-content/60">Certificate subject name</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-bolt mr-2"></i>
                        Quick Actions
                    </h3>
                    <div class="space-y-2">
                        <a asp-controller="ClientRedirects" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-external-link-alt mr-2"></i>
                            Redirect URIs
                        </a>
                        <a asp-controller="ClientScopes" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-key mr-2"></i>
                            Manage Scopes
                        </a>
                        <a asp-controller="ClientCorsOrigins" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-globe mr-2"></i>
                            CORS Origins
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<dialog id="deleteModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">
            <i class="fas fa-exclamation-triangle text-warning mr-2"></i>
            Confirm Secret Deletion
        </h3>
        <p class="py-4">
            Are you sure you want to delete the client secret: 
            <br><strong id="deleteSecretDescription"></strong>
            <br><br>This action cannot be undone and will break client authentication if this secret is in use.
        </p>
        <div class="modal-action">
            <form method="dialog">
                <button class="btn">Cancel</button>
            </form>
            <a id="deleteConfirmBtn" href="#" class="btn btn-error">
                <i class="fas fa-trash mr-2"></i>
                Delete Secret
            </a>
        </div>
    </div>
</dialog>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script>
        function confirmDelete(secretId, secretDescription) {
            document.getElementById('deleteSecretDescription').textContent = secretDescription;
            document.getElementById('deleteConfirmBtn').href = '@(Url.Action("Delete"))?id=' + secretId + '&parentid=@Model.NavBar.Id';
            document.getElementById('deleteModal').showModal();
        }

        function copySecret(secretValue) {
            navigator.clipboard.writeText(secretValue).then(function() {
                console.log('Secret copied to clipboard');
            });
        }

        function toggleSecretVisibility() {
            const input = document.getElementById('secretValue');
            const icon = document.getElementById('secretToggleIcon');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'fas fa-eye';
            }
        }

        function generateSecret() {
            const charset = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@@#$%^&*';
            let secret = '';
            for (let i = 0; i < 32; i++) {
                secret += charset.charAt(Math.floor(Math.random() * charset.length));
            }
            document.getElementById('secretValue').value = secret;
        }
    </script>
}