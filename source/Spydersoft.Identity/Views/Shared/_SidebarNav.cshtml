@using Spydersoft.Identity.Extensions

<nav class="p-4">
    <ul class="menu bg-base-100 text-base-content">
        <!-- Home -->
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center space-x-3 p-3 hover:bg-primary/10 rounded-lg transition-colors">
                <i class="fa fa-home text-primary"></i>
                <span>Home</span>
            </a>
        </li>

        @if (User.IsInRole("admin"))
        {
            <!-- IS Admin Section -->
            <li>
                <details class="@(Context.IsISAdminRoute() ? "open" : "")">
                    <summary class="flex items-center space-x-3 p-3 hover:bg-primary/10 rounded-lg transition-colors">
                        <svg class="w-5 h-5 text-primary" viewBox="0 0 22 22" fill="currentColor">
                            <path d="M17.4167 4.58333V6.41667H13.75V4.58333H17.4167ZM8.25 4.58333V10.0833H4.58333V4.58333H8.25ZM17.4167 11.9167V17.4167H13.75V11.9167H17.4167ZM8.25 15.5833V17.4167H4.58333V15.5833H8.25ZM19.25 2.75H11.9167V8.25H19.25V2.75ZM10.0833 2.75H2.75V11.9167H10.0833V2.75ZM19.25 10.0833H11.9167V19.25H19.25V10.0833ZM10.0833 13.75H2.75V19.25H10.0833V13.75Z" />
                        </svg>
                        <span>IS Admin</span>
                    </summary>
                    <ul class="ml-4 space-y-1">
                        <li>
                            <a asp-area="" asp-controller="Clients" asp-action="Index" class="flex items-center space-x-2 p-2 hover:bg-primary/10 rounded transition-colors">
                                <i class="fa fa-mobile text-sm"></i>
                                <span class="text-sm">Clients</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="IdentityResources" asp-action="Index" class="flex items-center space-x-2 p-2 hover:bg-primary/10 rounded transition-colors">
                                <i class="fa fa-stream text-sm"></i>
                                <span class="text-sm">Resources</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="ApiResources" asp-action="Index" class="flex items-center space-x-2 p-2 hover:bg-primary/10 rounded transition-colors">
                                <i class="fa fa-server text-sm"></i>
                                <span class="text-sm">APIs</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Scopes" asp-action="Index" class="flex items-center space-x-2 p-2 hover:bg-primary/10 rounded transition-colors">
                                <i class="fa fa-server text-sm"></i>
                                <span class="text-sm">Scopes</span>
                            </a>
                        </li>
                    </ul>
                </details>
            </li>

            <!-- User Admin Section -->
            <li>
                <details class="@(Context.IsUserAdminRoute() ? "open" : "")">
                    <summary class="flex items-center space-x-3 p-3 hover:bg-primary/10 rounded-lg transition-colors">
                        <i class="fa fa-users text-primary"></i>
                        <span>User Admin</span>
                    </summary>
                    <ul class="ml-4 space-y-1">
                        <li>
                            <a asp-area="" asp-controller="Users" asp-action="Index" class="flex items-center space-x-2 p-2 hover:bg-primary/10 rounded transition-colors">
                                <i class="fa fa-users text-sm"></i>
                                <span class="text-sm">Users</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="UserRoles" asp-action="Index" class="flex items-center space-x-2 p-2 hover:bg-primary/10 rounded transition-colors">
                                <i class="fa fa-user-tag text-sm"></i>
                                <span class="text-sm">Roles</span>
                            </a>
                        </li>
                    </ul>
                </details>
            </li>
        }

        <!-- Divider -->
        <div class="divider my-2"></div>

        <!-- Spydersoft Section -->
        <li>
            <details class="@(Context.IsSpydersoftRoute() ? "open" : "")">
                <summary class="flex items-center space-x-3 p-3 hover:bg-primary/10 rounded-lg transition-colors">
                    <div class="avatar">
                        <div class="w-6 rounded">
                            <img src="~/images/favicon.svg" alt="Spydersoft Icon" />
                        </div>
                    </div>
                    <span>Spydersoft</span>
                </summary>
                <ul class="ml-4 space-y-1">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Contact" class="flex items-center space-x-2 p-2 hover:bg-primary/10 rounded transition-colors">
                            <i class="fa fa-address-card text-sm"></i>
                            <span class="text-sm">Contact</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="About" class="flex items-center space-x-2 p-2 hover:bg-primary/10 rounded transition-colors">
                            <i class="fa fa-info-circle text-sm"></i>
                            <span class="text-sm">About</span>
                        </a>
                    </li>
                </ul>
            </details>
        </li>
    </ul>
</nav>