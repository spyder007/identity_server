@using Spydersoft.Identity.Models.Admin.ClientViewModels
@model ClientScopesViewModel

<div class="identity-server-dashboard">
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-accent to-primary">
                        <i class="fas fa-key text-white flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <div>
                    <h1 class="dashboard-title">Client Scopes</h1>
                    <p class="dashboard-subtitle">Manage OAuth scopes for client access permissions</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <a asp-controller="Clients" asp-action="Edit" asp-route-id="@Model.NavBar.Id" class="btn btn-outline">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Client
                </a>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    @await Html.PartialAsync("_clientNavBar", Model.NavBar)

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Scopes Management -->
        <div class="lg:col-span-2">
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="avatar">
                            <div class="w-10 h-10 rounded-full bg-accent/10">
                                <i class="fas fa-key text-accent flex items-center justify-center h-full"></i>
                            </div>
                        </div>
                        <div>
                            <h2 class="card-title text-xl">Assigned Scopes</h2>
                            <p class="text-base-content/70">Permissions granted to this client</p>
                        </div>
                    </div>

                    @if (Model.ItemsList.Any())
                    {
                        <!-- Existing Scopes -->
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 mb-6">
                            @foreach (var scope in Model.ItemsList)
                            {
                                <div class="card bg-base-200 border border-base-300 hover:border-accent transition-colors">
                                    <div class="card-body p-4">
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center space-x-2">
                                                <div class="avatar">
                                                    <div class="w-8 h-8 rounded-full bg-success/10">
                                                        <i class="fas fa-check text-success text-xs flex items-center justify-center h-full"></i>
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="font-medium text-sm">@scope.Scope</div>
                                                    <div class="text-xs text-base-content/60">
                                                        @switch (scope.Scope)
                                                        {
                                                            case "openid":
                                                                <span>OpenID Connect authentication</span>
                                                                break;
                                                            case "profile":
                                                                <span>User profile information</span>
                                                                break;
                                                            case "email":
                                                                <span>Email address access</span>
                                                                break;
                                                            case "offline_access":
                                                                <span>Refresh token capability</span>
                                                                break;
                                                            default:
                                                                <span>Custom scope permission</span>
                                                                break;
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            <button onclick="confirmDelete('@scope.Id', '@scope.Scope')" 
                                                    class="btn btn-error btn-xs" 
                                                    title="Remove scope">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-12 mb-6">
                            <div class="avatar mb-4">
                                <div class="w-24 rounded-full bg-base-200">
                                    <i class="fas fa-key text-4xl text-base-content/30 flex items-center justify-center h-full"></i>
                                </div>
                            </div>
                            <h3 class="text-lg font-semibold mb-2">No Scopes Assigned</h3>
                            <p class="text-base-content/70 mb-4">Add OAuth scopes to define what this client can access.</p>
                        </div>
                    }

                    <!-- Add New Scope Form -->
                    <form asp-action="Save" asp-route-id="@Model.Id" class="space-y-4">
                        <div class="divider">Add Scope</div>
                        
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.Scope)</span>
                                <span class="label-text-alt text-error">*</span>
                            </label>
                            <select asp-for="NewItem.Scope" 
                                    class="select select-bordered w-full focus:select-primary">
                                <option value="" disabled selected>Choose a scope to add</option>
                                @foreach (var scope in Model.NewItem.Scopes)
                                {
                                    <option value="@scope">@scope</option>
                                }
                            </select>
                            <label class="label">
                                <span asp-validation-for="NewItem.Scope" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Select from available scopes</span>
                            </label>
                        </div>

                        <div class="card-actions justify-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>
                                Add Scope
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Information Sidebar -->
        <div class="space-y-6">
            <!-- Statistics -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-chart-bar mr-2 text-primary"></i>
                        Statistics
                    </h3>
                    <div class="space-y-2">
                        <div class="stat">
                            <div class="stat-title">Assigned Scopes</div>
                            <div class="stat-value text-accent">@Model.ItemsList.Count()</div>
                        </div>
                        <div class="stat">
                            <div class="stat-title">Available Scopes</div>
                            <div class="stat-value text-info">@Model.NewItem.Scopes.Count()</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scope Categories -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-layer-group mr-2 text-secondary"></i>
                        Scope Categories
                    </h3>
                    <div class="space-y-3 text-sm">
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-primary badge-sm mr-2">OIDC</span>
                                Identity Scopes
                            </div>
                            <div class="text-xs text-base-content/60">openid, profile, email, address, phone</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-secondary badge-sm mr-2">API</span>
                                Resource Scopes
                            </div>
                            <div class="text-xs text-base-content/60">API access permissions</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-accent badge-sm mr-2">SPEC</span>
                                Special Scopes
                            </div>
                            <div class="text-xs text-base-content/60">offline_access for refresh tokens</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Common Scopes -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-star mr-2 text-warning"></i>
                        Common Scopes
                    </h3>
                    <div class="space-y-2 text-sm">
                        <div class="flex items-center justify-between p-2 bg-base-200 rounded">
                            <div>
                                <span class="font-medium">openid</span>
                                <div class="text-xs text-base-content/60">Required for OIDC</div>
                            </div>
                            <div class="badge badge-error badge-sm">Required</div>
                        </div>
                        <div class="flex items-center justify-between p-2 bg-base-200 rounded">
                            <div>
                                <span class="font-medium">profile</span>
                                <div class="text-xs text-base-content/60">User profile data</div>
                            </div>
                            <div class="badge badge-info badge-sm">Common</div>
                        </div>
                        <div class="flex items-center justify-between p-2 bg-base-200 rounded">
                            <div>
                                <span class="font-medium">email</span>
                                <div class="text-xs text-base-content/60">Email address</div>
                            </div>
                            <div class="badge badge-info badge-sm">Common</div>
                        </div>
                        <div class="flex items-center justify-between p-2 bg-base-200 rounded">
                            <div>
                                <span class="font-medium">offline_access</span>
                                <div class="text-xs text-base-content/60">Refresh tokens</div>
                            </div>
                            <div class="badge badge-success badge-sm">Optional</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scope Information -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-info-circle mr-2 text-info"></i>
                        About Scopes
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Control what data the client can access</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Users can consent to specific permissions</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Implement principle of least privilege</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Required scopes are always included</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-bolt mr-2"></i>
                        Quick Actions
                    </h3>
                    <div class="space-y-2">
                        <a asp-controller="ClientClaims" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-tags mr-2"></i>
                            Client Claims
                        </a>
                        <a asp-controller="ClientSecrets" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-shield-alt mr-2"></i>
                            Client Secrets
                        </a>
                        <a asp-controller="ClientRedirects" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-external-link-alt mr-2"></i>
                            Redirect URIs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<dialog id="deleteModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">
            <i class="fas fa-exclamation-triangle text-warning mr-2"></i>
            Remove Client Scope
        </h3>
        <p class="py-4">
            Are you sure you want to remove the scope <strong id="deleteScopeName"></strong> from this client?
            <br><br>This will revoke the client's access to this permission scope.
        </p>
        <div class="modal-action">
            <form method="dialog">
                <button class="btn">Cancel</button>
            </form>
            <a id="deleteConfirmBtn" href="#" class="btn btn-error">
                <i class="fas fa-times mr-2"></i>
                Remove Scope
            </a>
        </div>
    </div>
</dialog>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script>
        function confirmDelete(scopeId, scopeName) {
            document.getElementById('deleteScopeName').textContent = scopeName;
            document.getElementById('deleteConfirmBtn').href = '@(Url.Action("Delete"))?id=' + scopeId + '&parentid=@Model.NavBar.Id';
            document.getElementById('deleteModal').showModal();
        }
    </script>
}
