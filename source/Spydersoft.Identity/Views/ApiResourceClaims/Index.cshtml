@using Spydersoft.Identity.Models.Admin.ApiResourceViewModels
@model ApiResourceClaimsViewModel

<div class="identity-server-dashboard">
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-info to-primary">
                        <i class="fas fa-tags text-white flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <div>
                    <h1 class="dashboard-title">API Resource Claims</h1>
                    <p class="dashboard-subtitle">Configure claims included in access tokens for this API</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <a asp-controller="ApiResources" asp-action="Edit" asp-route-id="@Model.NavBar.Id" class="btn btn-outline">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to API Resource
                </a>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    @await Html.PartialAsync("_apiNavBar", Model.NavBar)

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Claims Management -->
        <div class="lg:col-span-2">
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="avatar">
                            <div class="w-10 h-10 rounded-full bg-info/10">
                                <i class="fas fa-tags text-info flex items-center justify-center h-full"></i>
                            </div>
                        </div>
                        <div>
                            <h2 class="card-title text-xl">API Resource Claims</h2>
                            <p class="text-base-content/70">Claims automatically included in access tokens</p>
                        </div>
                    </div>

                    @if (Model.ItemsList.Any())
                    {
                        <!-- Existing Claims -->
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 mb-6">
                            @foreach (var claim in Model.ItemsList)
                            {
                                <div class="card bg-base-200 border border-base-300 hover:border-info transition-colors">
                                    <div class="card-body p-4">
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center space-x-2">
                                                <div class="avatar">
                                                    <div class="w-8 h-8 rounded-full bg-success/10">
                                                        <i class="fas fa-tag text-success text-xs flex items-center justify-center h-full"></i>
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="font-medium text-sm">@claim.Type</div>
                                                    <div class="text-xs text-base-content/60">
                                                        @GetClaimDescription(claim.Type)
                                                    </div>
                                                </div>
                                            </div>
                                            <button onclick="confirmDelete('@claim.Id', '@claim.Type')" 
                                                    class="btn btn-error btn-xs" 
                                                    title="Remove claim">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-12 mb-6">
                            <div class="avatar mb-4">
                                <div class="w-24 rounded-full bg-base-200">
                                    <i class="fas fa-tags text-4xl text-base-content/30 flex items-center justify-center h-full"></i>
                                </div>
                            </div>
                            <h3 class="text-lg font-semibold mb-2">No Claims Configured</h3>
                            <p class="text-base-content/70 mb-4">Add claims to include user information in API access tokens.</p>
                        </div>
                    }

                    <!-- Add New Claim Form -->
                    <form asp-action="Save" asp-route-id="@Model.Id" class="space-y-4">
                        <div class="divider">Add Claim Type</div>
                        
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.Type)</span>
                                <span class="label-text-alt text-error">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-tag text-base-content/40"></i>
                                </div>
                                <input asp-for="NewItem.Type" 
                                       type="text" 
                                       class="input input-bordered w-full pl-10 focus:input-primary" 
                                       placeholder="sub" 
                                       list="claimTypesList" />
                                <datalist id="claimTypesList">
                                    <option value="sub">Subject identifier</option>
                                    <option value="email">Email address</option>
                                    <option value="name">Full name</option>
                                    <option value="given_name">First name</option>
                                    <option value="family_name">Last name</option>
                                    <option value="role">User role</option>
                                    <option value="scope">Access scope</option>
                                    <option value="aud">Audience</option>
                                    <option value="iss">Issuer</option>
                                    <option value="exp">Expiration time</option>
                                    <option value="iat">Issued at time</option>
                                    <option value="jti">JWT ID</option>
                                </datalist>
                            </div>
                            <label class="label">
                                <span asp-validation-for="NewItem.Type" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Standard or custom claim type</span>
                            </label>
                        </div>

                        <div class="card-actions justify-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>
                                Add Claim
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Information Sidebar -->
        <div class="space-y-6">
            <!-- Statistics -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-chart-bar mr-2 text-primary"></i>
                        Statistics
                    </h3>
                    <div class="stat">
                        <div class="stat-title">Total Claims</div>
                        <div class="stat-value text-info">@Model.ItemsList.Count()</div>
                        <div class="stat-desc">Included in tokens</div>
                    </div>
                </div>
            </div>

            <!-- Standard Claims -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-bookmark mr-2 text-secondary"></i>
                        Standard Claims
                    </h3>
                    <div class="space-y-2 text-sm">
                        <div class="flex items-center justify-between p-2 bg-base-200 rounded">
                            <div>
                                <span class="font-medium">sub</span>
                                <div class="text-xs text-base-content/60">Subject identifier</div>
                            </div>
                            <div class="badge badge-error badge-sm">Required</div>
                        </div>
                        <div class="flex items-center justify-between p-2 bg-base-200 rounded">
                            <div>
                                <span class="font-medium">aud</span>
                                <div class="text-xs text-base-content/60">Audience</div>
                            </div>
                            <div class="badge badge-info badge-sm">Standard</div>
                        </div>
                        <div class="flex items-center justify-between p-2 bg-base-200 rounded">
                            <div>
                                <span class="font-medium">scope</span>
                                <div class="text-xs text-base-content/60">Access scopes</div>
                            </div>
                            <div class="badge badge-info badge-sm">Standard</div>
                        </div>
                        <div class="flex items-center justify-between p-2 bg-base-200 rounded">
                            <div>
                                <span class="font-medium">email</span>
                                <div class="text-xs text-base-content/60">Email address</div>
                            </div>
                            <div class="badge badge-success badge-sm">Common</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Claim Categories -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-layer-group mr-2 text-accent"></i>
                        Claim Categories
                    </h3>
                    <div class="space-y-3 text-sm">
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-primary badge-sm mr-2">ID</span>
                                Identity Claims
                            </div>
                            <div class="text-xs text-base-content/60">sub, email, name, given_name, family_name</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-secondary badge-sm mr-2">AUTH</span>
                                Authorization Claims
                            </div>
                            <div class="text-xs text-base-content/60">role, scope, permissions</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-accent badge-sm mr-2">META</span>
                                Metadata Claims
                            </div>
                            <div class="text-xs text-base-content/60">aud, iss, exp, iat, jti</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Information -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-shield-alt mr-2 text-warning"></i>
                        Security Guidelines
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Include only necessary claims</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Avoid sensitive personal data</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Use standard claim names when possible</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-exclamation-triangle text-warning text-xs mt-1"></i>
                            <span>Claims increase token size</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Token Information -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-info-circle mr-2 text-info"></i>
                        About API Claims
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Automatically included in access tokens</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Available to API endpoints</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Support authorization decisions</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Based on user's actual claims</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-bolt mr-2"></i>
                        Quick Actions
                    </h3>
                    <div class="space-y-2">
                        <a asp-controller="ApiResourceScopes" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-key mr-2"></i>
                            API Scopes
                        </a>
                        <a asp-controller="ApiResourceSecrets" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-shield-alt mr-2"></i>
                            API Secrets
                        </a>
                        <a asp-controller="ApiResourceProperties" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-cog mr-2"></i>
                            Properties
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<dialog id="deleteModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">
            <i class="fas fa-exclamation-triangle text-warning mr-2"></i>
            Remove API Claim
        </h3>
        <p class="py-4">
            Are you sure you want to remove the claim <strong id="deleteClaimType"></strong>?
            <br><br>This claim will no longer be included in access tokens for this API resource.
        </p>
        <div class="modal-action">
            <form method="dialog">
                <button class="btn">Cancel</button>
            </form>
            <a id="deleteConfirmBtn" href="#" class="btn btn-error">
                <i class="fas fa-times mr-2"></i>
                Remove Claim
            </a>
        </div>
    </div>
</dialog>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script>
        function confirmDelete(claimId, claimType) {
            document.getElementById('deleteClaimType').textContent = claimType;
            document.getElementById('deleteConfirmBtn').href = '@(Url.Action("Delete"))?id=' + claimId + '&parentid=@Model.NavBar.Id';
            document.getElementById('deleteModal').showModal();
        }
    </script>
}

@functions {
    private string GetClaimDescription(string claimType)
    {
        return claimType.ToLower() switch
        {
            "sub" => "Subject identifier",
            "email" => "Email address",
            "name" => "Full name",
            "given_name" => "First name",
            "family_name" => "Last name",
            "role" => "User role",
            "scope" => "Access scope",
            "aud" => "Audience",
            "iss" => "Issuer",
            "exp" => "Expiration time",
            "iat" => "Issued at time",
            "jti" => "JWT ID",
            _ => "Custom claim"
        };
    }
}