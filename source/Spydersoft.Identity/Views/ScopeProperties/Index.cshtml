@using Spydersoft.Identity.Models.Admin.ScopeViewModels
@model ScopePropertiesViewModel

<div class="identity-server-dashboard">
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-secondary to-accent">
                        <i class="fas fa-cog text-white flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <div>
                    <h1 class="dashboard-title">Scope Properties</h1>
                    <p class="dashboard-subtitle">Configure custom properties and metadata for the OAuth scope</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <a asp-controller="Scopes" asp-action="Edit" asp-route-id="@Model.NavBar.Id" class="btn btn-outline">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Scope
                </a>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    @await Html.PartialAsync("_scopeNavBar", Model.NavBar)

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8" data-parent-id="@Model.NavBar.Id">
        <!-- Properties Management -->
        <div class="lg:col-span-2">
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="avatar">
                            <div class="w-10 h-10 rounded-full bg-secondary/10">
                                <i class="fas fa-cog text-secondary flex items-center justify-center h-full"></i>
                            </div>
                        </div>
                        <div>
                            <h2 class="card-title text-xl">Custom Properties</h2>
                            <p class="text-base-content/70">Key-value pairs for scope metadata and configuration</p>
                        </div>
                    </div>

                    @if (Model.ItemsList.Any())
                    {
                        <!-- Existing Properties -->
                        <div class="space-y-3 mb-6">
                            @foreach (var property in Model.ItemsList)
                            {
                                <div class="card bg-base-200 border border-base-300">
                                    <div class="card-body p-4">
                                        <div class="flex items-center justify-between">
                                            <div class="flex-1 space-y-1">
                                                <div class="flex items-center space-x-2">
                                                    <div class="avatar">
                                                        <div class="w-8 h-8 rounded-full bg-info/10">
                                                            <i class="fas fa-key text-info text-xs flex items-center justify-center h-full"></i>
                                                        </div>
                                                    </div>
                                                    <span class="font-medium text-sm">@property.Key</span>
                                                    <div class="badge badge-outline badge-sm">@GetPropertyCategory(property.Key)</div>
                                                </div>
                                                <div class="ml-10">
                                                    <div class="text-sm bg-base-300 p-2 rounded font-mono">
                                                        @property.Value
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="flex space-x-2 ml-4">
                                                <button data-copy-property="@property.Key" data-copy-value="@property.Value" 
                                                        class="btn btn-ghost btn-sm"
                                                        title="Copy property">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                                <button data-delete-id="@property.Id" data-delete-name="@property.Key" 
                                                        class="btn btn-error btn-sm" 
                                                        title="Delete property">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-12 mb-6">
                            <div class="avatar mb-4">
                                <div class="w-24 rounded-full bg-base-200">
                                    <i class="fas fa-cog text-4xl text-base-content/30 flex items-center justify-center h-full"></i>
                                </div>
                            </div>
                            <h3 class="text-lg font-semibold mb-2">No Properties Configured</h3>
                            <p class="text-base-content/70 mb-4">Add custom properties to store scope-specific metadata and configuration.</p>
                        </div>
                    }

                    <!-- Add New Property Form -->
                    <form asp-action="Save" asp-route-id="@Model.Id" class="space-y-4">
                        <div class="divider">Add Scope Property</div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Property Key -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.Key)</span>
                                    <span class="label-text-alt text-error">*</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-key text-base-content/40"></i>
                                    </div>
                                    <input asp-for="NewItem.Key" 
                                           type="text" 
                                           class="input input-bordered w-full pl-10 focus:input-primary" 
                                           placeholder="access_level" 
                                           list="scopePropertyKeys" />
                                    <datalist id="scopePropertyKeys">
                                        <option value="access_level">Access level (read, write, admin)</option>
                                        <option value="data_sensitivity">Data sensitivity level</option>
                                        <option value="purpose">Purpose of data access</option>
                                        <option value="retention_period">Data retention period</option>
                                        <option value="consent_text">Custom consent text</option>
                                        <option value="category">Scope category</option>
                                        <option value="description_localized">Localized description</option>
                                        <option value="icon_uri">Icon URI for UI display</option>
                                        <option value="documentation_url">Documentation URL</option>
                                        <option value="privacy_impact">Privacy impact level</option>
                                        <option value="business_justification">Business justification</option>
                                        <option value="data_classification">Data classification level</option>
                                        <option value="geographic_restriction">Geographic usage restrictions</option>
                                        <option value="audit_level">Audit logging level</option>
                                    </datalist>
                                </div>
                                <label class="label">
                                    <span asp-validation-for="NewItem.Key" class="label-text-alt text-error"></span>
                                    <span class="label-text-alt text-base-content/60">Property identifier</span>
                                </label>
                            </div>

                            <!-- Property Value -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.Value)</span>
                                    <span class="label-text-alt text-error">*</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-quote-right text-base-content/40"></i>
                                    </div>
                                    <input asp-for="NewItem.Value" 
                                           type="text" 
                                           class="input input-bordered w-full pl-10 focus:input-primary" 
                                           placeholder="read" />
                                </div>
                                <label class="label">
                                    <span asp-validation-for="NewItem.Value" class="label-text-alt text-error"></span>
                                    <span class="label-text-alt text-base-content/60">Property value</span>
                                </label>
                            </div>
                        </div>

                        <div class="card-actions justify-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>
                                Add Property
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Information Sidebar -->
        <div class="space-y-6">
            <!-- Statistics -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-chart-bar mr-2 text-primary"></i>
                        Statistics
                    </h3>
                    <div class="stat">
                        <div class="stat-title">Total Properties</div>
                        <div class="stat-value text-secondary">@Model.ItemsList.Count()</div>
                        <div class="stat-desc">Custom attributes</div>
                    </div>
                </div>
            </div>

            <!-- Common Scope Properties -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-star mr-2 text-warning"></i>
                        Common Scope Properties
                    </h3>
                    <div class="space-y-2 text-sm">
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">access_level</div>
                            <div class="text-xs text-base-content/60">read, write, admin</div>
                        </div>
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">data_sensitivity</div>
                            <div class="text-xs text-base-content/60">public, internal, confidential, restricted</div>
                        </div>
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">purpose</div>
                            <div class="text-xs text-base-content/60">analytics, personalization, support</div>
                        </div>
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">retention_period</div>
                            <div class="text-xs text-base-content/60">30d, 1y, 7y, indefinite</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Property Categories -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-layer-group mr-2 text-secondary"></i>
                        Property Categories
                    </h3>
                    <div class="space-y-3 text-sm">
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-primary badge-sm mr-2">ACCESS</span>
                                Access Control
                            </div>
                            <div class="text-xs text-base-content/60">access_level, category, geographic_restriction</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-secondary badge-sm mr-2">PRIVACY</span>
                                Privacy & Compliance
                            </div>
                            <div class="text-xs text-base-content/60">data_sensitivity, retention_period, privacy_impact</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-accent badge-sm mr-2">UI</span>
                                User Interface
                            </div>
                            <div class="text-xs text-base-content/60">consent_text, description_localized, icon_uri</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-info badge-sm mr-2">META</span>
                                Metadata
                            </div>
                            <div class="text-xs text-base-content/60">purpose, documentation_url, business_justification</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scope Property Guidelines -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-info-circle mr-2 text-info"></i>
                        Usage Guidelines
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Define clear access levels and purposes</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Document data sensitivity classifications</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Specify retention and compliance requirements</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-exclamation-triangle text-warning text-xs mt-1"></i>
                            <span>Avoid storing sensitive data in properties</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Privacy & GDPR -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-shield-alt mr-2 text-warning"></i>
                        Privacy & GDPR Compliance
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Document lawful basis for data processing</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Define clear data retention periods</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Assess and document privacy impact</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Provide clear consent mechanisms</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Support data subject rights</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- OAuth Best Practices -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-lightbulb mr-2 text-accent"></i>
                        OAuth Best Practices
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Use granular, purpose-specific scopes</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Implement principle of least privilege</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Provide clear scope descriptions</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Regular scope usage auditing</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-bolt mr-2"></i>
                        Quick Actions
                    </h3>
                    <div class="space-y-2">
                        <a asp-controller="ScopeClaims" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-tags mr-2"></i>
                            Scope Claims
                        </a>
                        <a asp-controller="Scopes" asp-action="Index" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-list mr-2"></i>
                            All Scopes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<dialog id="deleteModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">
            <i class="fas fa-exclamation-triangle text-warning mr-2"></i>
            Delete Scope Property
        </h3>
        <p class="py-4">
            Are you sure you want to delete the property <strong id="deletePropertyKey"></strong>?
            <br><br>This action cannot be undone.
        </p>
        <div class="modal-action">
            <form method="dialog">
                <button class="btn">Cancel</button>
            </form>
            <a id="deleteConfirmBtn" href="#" class="btn btn-error">
                <i class="fas fa-trash mr-2"></i>
                Delete Property
            </a>
        </div>
    </div>
</dialog>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@functions {
    private string GetPropertyCategory(string key)
    {
        return key.ToLower() switch
        {
            var k when k.Contains("access") || k.Contains("category") || k.Contains("geographic") => "ACCESS",
            var k when k.Contains("sensitivity") || k.Contains("retention") || k.Contains("privacy") || k.Contains("classification") => "PRIVACY",
            var k when k.Contains("consent") || k.Contains("localized") || k.Contains("icon") => "UI",
            var k when k.Contains("purpose") || k.Contains("documentation") || k.Contains("justification") || k.Contains("audit") => "META",
            _ => "CUSTOM"
        };
    }
}