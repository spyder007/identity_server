@using Spydersoft.Identity.Models.Admin.ClientViewModels
@model ClientPostLogoutRedirectUrisViewModel

<div class="identity-server-dashboard">
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-secondary to-accent">
                        <i class="fas fa-sign-out-alt text-white flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <div>
                    <h1 class="dashboard-title">Post-Logout Redirect URIs</h1>
                    <p class="dashboard-subtitle">Configure where users are redirected after logout</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <a asp-controller="Clients" asp-action="Edit" asp-route-id="@Model.NavBar.Id" class="btn btn-outline">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Client
                </a>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    @await Html.PartialAsync("_clientNavBar", Model.NavBar)

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- URI Management -->
        <div class="lg:col-span-2">
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="avatar">
                            <div class="w-10 h-10 rounded-full bg-secondary/10">
                                <i class="fas fa-sign-out-alt text-secondary flex items-center justify-center h-full"></i>
                            </div>
                        </div>
                        <div>
                            <h2 class="card-title text-xl">Post-Logout Redirect URIs</h2>
                            <p class="text-base-content/70">URLs where users are redirected after successful logout</p>
                        </div>
                    </div>

                    @if (Model.ItemsList.Any())
                    {
                        <!-- Existing URIs -->
                        <div class="space-y-3 mb-6">
                            @foreach (var uri in Model.ItemsList)
                            {
                                <div class="card bg-base-200 border border-base-300 hover:border-secondary transition-colors">
                                    <div class="card-body p-4">
                                        <div class="flex items-center justify-between">
                                            <div class="flex-1 min-w-0 mr-4">
                                                <div class="flex items-center space-x-3">
                                                    <div class="avatar">
                                                        <div class="w-8 h-8 rounded-full bg-success/10">
                                                            <i class="fas fa-check text-success text-xs flex items-center justify-center h-full"></i>
                                                        </div>
                                                    </div>
                                                    <div class="min-w-0 flex-1">
                                                        <div class="font-mono text-sm break-all">@uri.PostLogoutRedirectUri</div>
                                                        <div class="text-xs text-base-content/60 mt-1">
                                                            @GetUriDescription(uri.PostLogoutRedirectUri)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="flex space-x-2">
                                                <button onclick="copyUri('@uri.PostLogoutRedirectUri')" 
                                                        class="btn btn-ghost btn-sm"
                                                        title="Copy URI">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                                <a href="@uri.PostLogoutRedirectUri" 
                                                   target="_blank" 
                                                   class="btn btn-ghost btn-sm"
                                                   title="Test URI">
                                                    <i class="fas fa-external-link-alt"></i>
                                                </a>
                                                <button onclick="confirmDelete('@uri.Id', '@uri.PostLogoutRedirectUri')" 
                                                        class="btn btn-error btn-sm" 
                                                        title="Delete URI">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-12 mb-6">
                            <div class="avatar mb-4">
                                <div class="w-24 rounded-full bg-base-200">
                                    <i class="fas fa-sign-out-alt text-4xl text-base-content/30 flex items-center justify-center h-full"></i>
                                </div>
                            </div>
                            <h3 class="text-lg font-semibold mb-2">No Post-Logout URIs</h3>
                            <p class="text-base-content/70 mb-4">Add URIs to control where users are redirected after logout.</p>
                        </div>
                    }

                    <!-- Add New URI Form -->
                    <form asp-action="Save" asp-route-id="@Model.Id" class="space-y-4">
                        <div class="divider">Add Post-Logout Redirect URI</div>
                        
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.PostLogoutRedirectUri)</span>
                                <span class="label-text-alt text-error">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-link text-base-content/40"></i>
                                </div>
                                <input asp-for="NewItem.PostLogoutRedirectUri" 
                                       type="url" 
                                       class="input input-bordered w-full pl-10 focus:input-primary" 
                                       placeholder="https://example.com/logout-success" 
                                       list="commonLogoutUris" />
                                <datalist id="commonLogoutUris">
                                    <option value="https://localhost:5001/logout-success">Local development</option>
                                    <option value="https://yourapp.com/logout">Production app</option>
                                    <option value="https://yourapp.com/goodbye">Goodbye page</option>
                                    <option value="https://yourapp.com">Home page</option>
                                </datalist>
                            </div>
                            <label class="label">
                                <span asp-validation-for="NewItem.PostLogoutRedirectUri" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Valid HTTPS URL for post-logout redirect</span>
                            </label>
                        </div>

                        <div class="card-actions justify-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>
                                Add Logout URI
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Information Sidebar -->
        <div class="space-y-6">
            <!-- Statistics -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-chart-bar mr-2 text-primary"></i>
                        Statistics
                    </h3>
                    <div class="stat">
                        <div class="stat-title">Logout URIs</div>
                        <div class="stat-value text-secondary">@Model.ItemsList.Count()</div>
                        <div class="stat-desc">Post-logout destinations</div>
                    </div>
                </div>
            </div>

            <!-- Logout Flow Information -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-info-circle mr-2 text-info"></i>
                        About Post-Logout URIs
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Control where users go after logout</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Enhance user experience</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Prevent logout confusion</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Support single logout flow</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- URI Patterns -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-globe mr-2 text-secondary"></i>
                        Common URI Patterns
                    </h3>
                    <div class="space-y-2 text-sm">
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">Home Page</div>
                            <div class="text-xs text-base-content/60">https://yourapp.com</div>
                        </div>
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">Logout Success</div>
                            <div class="text-xs text-base-content/60">https://yourapp.com/logout-success</div>
                        </div>
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">Goodbye Page</div>
                            <div class="text-xs text-base-content/60">https://yourapp.com/goodbye</div>
                        </div>
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">Landing Page</div>
                            <div class="text-xs text-base-content/60">https://yourapp.com/welcome</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Guidelines -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-shield-alt mr-2 text-warning"></i>
                        Security Guidelines
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Use HTTPS URLs only</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Validate URI ownership</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Keep URI list minimal</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Avoid wildcard patterns</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-exclamation-triangle text-warning text-xs mt-1"></i>
                            <span>Review URIs regularly</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Logout Flow -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-route mr-2 text-accent"></i>
                        Logout Flow
                    </h3>
                    <div class="steps steps-vertical">
                        <div class="step step-primary">
                            <div class="text-left">
                                <div class="font-medium">User Initiates Logout</div>
                                <div class="text-xs text-base-content/60">From client application</div>
                            </div>
                        </div>
                        <div class="step step-primary">
                            <div class="text-left">
                                <div class="font-medium">Identity Server Logout</div>
                                <div class="text-xs text-base-content/60">Session termination</div>
                            </div>
                        </div>
                        <div class="step step-primary">
                            <div class="text-left">
                                <div class="font-medium">Post-Logout Redirect</div>
                                <div class="text-xs text-base-content/60">To configured URI</div>
                            </div>
                        </div>
                        <div class="step">
                            <div class="text-left">
                                <div class="font-medium">Client Cleanup</div>
                                <div class="text-xs text-base-content/60">Application state reset</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-bolt mr-2"></i>
                        Quick Actions
                    </h3>
                    <div class="space-y-2">
                        <a asp-controller="ClientRedirects" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-external-link-alt mr-2"></i>
                            Redirect URIs
                        </a>
                        <a asp-controller="ClientCorsOrigins" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-globe mr-2"></i>
                            CORS Origins
                        </a>
                        <a asp-controller="ClientGrantTypes" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-cogs mr-2"></i>
                            Grant Types
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<dialog id="deleteModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">
            <i class="fas fa-exclamation-triangle text-warning mr-2"></i>
            Delete Post-Logout URI
        </h3>
        <p class="py-4">
            Are you sure you want to delete this post-logout redirect URI?
            <br><br><strong id="deleteUri" class="font-mono text-sm break-all"></strong>
            <br><br>Users will not be able to be redirected to this location after logout.
        </p>
        <div class="modal-action">
            <form method="dialog">
                <button class="btn">Cancel</button>
            </form>
            <a id="deleteConfirmBtn" href="#" class="btn btn-error">
                <i class="fas fa-trash mr-2"></i>
                Delete URI
            </a>
        </div>
    </div>
</dialog>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script>
        function confirmDelete(uriId, uri) {
            document.getElementById('deleteUri').textContent = uri;
            document.getElementById('deleteConfirmBtn').href = '@(Url.Action("Delete"))?id=' + uriId + '&parentid=@Model.NavBar.Id';
            document.getElementById('deleteModal').showModal();
        }

        function copyUri(uri) {
            navigator.clipboard.writeText(uri).then(function() {
                console.log('URI copied: ' + uri);
            });
        }
    </script>
}

@functions {
    private string GetUriDescription(string uri)
    {
        if (uri.Contains("localhost"))
            return "Development/Local URI";
        if (uri.EndsWith("/logout") || uri.EndsWith("/logout-success"))
            return "Logout confirmation page";
        if (uri.EndsWith("/goodbye") || uri.EndsWith("/farewell"))
            return "Goodbye page";
        if (uri.EndsWith("/") || uri.Split('/').Length <= 3)
            return "Home page redirect";
        return "Custom post-logout destination";
    }
}