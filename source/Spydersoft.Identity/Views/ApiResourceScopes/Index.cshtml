@using Spydersoft.Identity.Models.Admin.ApiResourceViewModels
@model ApiResourceScopesViewModel

<div class="identity-server-dashboard">
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="avatar">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-secondary">
                        <i class="fas fa-key text-white flex items-center justify-center h-full"></i>
                    </div>
                </div>
                <div>
                    <h1 class="dashboard-title">API Resource Scopes</h1>
                    <p class="dashboard-subtitle">Manage scopes associated with this API resource</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <a asp-controller="ApiResources" asp-action="Edit" asp-route-id="@Model.NavBar.Id" class="btn btn-outline">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to API Resource
                </a>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    @await Html.PartialAsync("_apiNavBar", Model.NavBar)

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Scopes Management -->
        <div class="lg:col-span-2">
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="avatar">
                            <div class="w-10 h-10 rounded-full bg-primary/10">
                                <i class="fas fa-key text-primary flex items-center justify-center h-full"></i>
                            </div>
                        </div>
                        <div>
                            <h2 class="card-title text-xl">Associated Scopes</h2>
                            <p class="text-base-content/70">Scopes that grant access to this API resource</p>
                        </div>
                    </div>

                    @if (Model.ItemsList.Any())
                    {
                        <!-- Existing Scopes -->
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 mb-6">
                            @foreach (var scope in Model.ItemsList)
                            {
                                <div class="card bg-base-200 border border-base-300 hover:border-primary transition-colors">
                                    <div class="card-body p-4">
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center space-x-2">
                                                <div class="avatar">
                                                    <div class="w-8 h-8 rounded-full bg-success/10">
                                                        <i class="fas fa-shield-alt text-success text-xs flex items-center justify-center h-full"></i>
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="font-medium text-sm">@scope.Scope</div>
                                                    <div class="text-xs text-base-content/60">
                                                        @GetScopeDescription(scope.Scope)
                                                    </div>
                                                </div>
                                            </div>
                                            <button onclick="confirmDelete('@scope.Id', '@scope.Scope')" 
                                                    class="btn btn-error btn-xs" 
                                                    title="Remove scope">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-12 mb-6">
                            <div class="avatar mb-4">
                                <div class="w-24 rounded-full bg-base-200">
                                    <i class="fas fa-key text-4xl text-base-content/30 flex items-center justify-center h-full"></i>
                                </div>
                            </div>
                            <h3 class="text-lg font-semibold mb-2">No Scopes Associated</h3>
                            <p class="text-base-content/70 mb-4">Add scopes to define what permissions grant access to this API.</p>
                        </div>
                    }

                    <!-- Add New Scope Form -->
                    <form asp-action="Save" asp-route-id="@Model.Id" class="space-y-4">
                        <div class="divider">Associate Scope</div>
                        
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">@Html.DisplayNameFor(m => m.NewItem.Scope)</span>
                                <span class="label-text-alt text-error">*</span>
                            </label>
                            <select asp-for="NewItem.Scope" 
                                    class="select select-bordered w-full focus:select-primary">
                                <option value="" disabled selected>Choose a scope to associate</option>
                                @foreach (var scope in Model.NewItem.Scopes)
                                {
                                    <option value="@scope">@scope</option>
                                }
                            </select>
                            <label class="label">
                                <span asp-validation-for="NewItem.Scope" class="label-text-alt text-error"></span>
                                <span class="label-text-alt text-base-content/60">Select from available scopes</span>
                            </label>
                        </div>

                        <div class="card-actions justify-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-link mr-2"></i>
                                Associate Scope
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Information Sidebar -->
        <div class="space-y-6">
            <!-- Statistics -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-chart-bar mr-2 text-primary"></i>
                        Statistics
                    </h3>
                    <div class="space-y-2">
                        <div class="stat">
                            <div class="stat-title">Associated Scopes</div>
                            <div class="stat-value text-primary">@Model.ItemsList.Count()</div>
                        </div>
                        <div class="stat">
                            <div class="stat-title">Available Scopes</div>
                            <div class="stat-value text-info">@Model.NewItem.Scopes.Count()</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scope Information -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-info-circle mr-2 text-info"></i>
                        About API Scopes
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Define granular permissions for API access</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Clients request specific scopes</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Users consent to scope permissions</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>APIs validate scopes in access tokens</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Scope Types -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-layer-group mr-2 text-secondary"></i>
                        Scope Types
                    </h3>
                    <div class="space-y-3 text-sm">
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-primary badge-sm mr-2">READ</span>
                                Read Operations
                            </div>
                            <div class="text-xs text-base-content/60">View data, list resources</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-secondary badge-sm mr-2">WRITE</span>
                                Write Operations
                            </div>
                            <div class="text-xs text-base-content/60">Create, update, delete resources</div>
                        </div>
                        <div class="bg-base-200 p-3 rounded">
                            <div class="font-medium mb-2 flex items-center">
                                <span class="badge badge-accent badge-sm mr-2">ADMIN</span>
                                Administrative
                            </div>
                            <div class="text-xs text-base-content/60">Full control, management operations</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Best Practices -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-star mr-2 text-warning"></i>
                        Best Practices
                    </h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Use descriptive scope names</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Follow principle of least privilege</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Group related operations logically</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <i class="fas fa-check text-success text-xs mt-1"></i>
                            <span>Document scope purposes clearly</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Common Patterns -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-lightbulb mr-2 text-accent"></i>
                        Common Patterns
                    </h3>
                    <div class="space-y-2 text-sm">
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">api.read</div>
                            <div class="text-xs text-base-content/60">Read access to API resources</div>
                        </div>
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">api.write</div>
                            <div class="text-xs text-base-content/60">Write access to API resources</div>
                        </div>
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">api.admin</div>
                            <div class="text-xs text-base-content/60">Administrative access</div>
                        </div>
                        <div class="bg-base-200 p-2 rounded">
                            <div class="font-medium">resource.scope</div>
                            <div class="text-xs text-base-content/60">Resource-specific access</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card bg-base-100 shadow-xl border border-base-300">
                <div class="card-body">
                    <h3 class="card-title text-lg mb-4">
                        <i class="fas fa-bolt mr-2"></i>
                        Quick Actions
                    </h3>
                    <div class="space-y-2">
                        <a asp-controller="ApiResourceClaims" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-tags mr-2"></i>
                            API Claims
                        </a>
                        <a asp-controller="ApiResourceSecrets" asp-action="Index" asp-route-id="@Model.NavBar.Id" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-shield-alt mr-2"></i>
                            API Secrets
                        </a>
                        <a asp-controller="Scopes" asp-action="Index" 
                           class="btn btn-ghost btn-sm w-full justify-start">
                            <i class="fas fa-key mr-2"></i>
                            Manage All Scopes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<dialog id="deleteModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">
            <i class="fas fa-exclamation-triangle text-warning mr-2"></i>
            Remove API Scope Association
        </h3>
        <p class="py-4">
            Are you sure you want to remove the scope <strong id="deleteScopeName"></strong> from this API resource?
            <br><br>This will prevent access tokens with this scope from accessing this API.
        </p>
        <div class="modal-action">
            <form method="dialog">
                <button class="btn">Cancel</button>
            </form>
            <a id="deleteConfirmBtn" href="#" class="btn btn-error">
                <i class="fas fa-unlink mr-2"></i>
                Remove Association
            </a>
        </div>
    </div>
</dialog>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script>
        function confirmDelete(scopeId, scopeName) {
            document.getElementById('deleteScopeName').textContent = scopeName;
            document.getElementById('deleteConfirmBtn').href = '@(Url.Action("Delete"))?id=' + scopeId + '&parentid=@Model.NavBar.Id';
            document.getElementById('deleteModal').showModal();
        }
    </script>
}

@functions {
    private string GetScopeDescription(string scopeName)
    {
        if (scopeName.Contains("read", StringComparison.OrdinalIgnoreCase))
            return "Read access permission";
        if (scopeName.Contains("write", StringComparison.OrdinalIgnoreCase))
            return "Write access permission";
        if (scopeName.Contains("admin", StringComparison.OrdinalIgnoreCase))
            return "Administrative access";
        if (scopeName.Contains("delete", StringComparison.OrdinalIgnoreCase))
            return "Delete permission";
        return "API access permission";
    }
}