    {
        <a class="nav-link @Model.ClaimsActive" asp-area="" asp-controller="IdentityResourceClaims" asp-action="Edit" asp-route-id="@Model.Id">Claims</a>
        <a class="nav-link @Model.PropertiesActive" asp-area="" asp-controller="IdentityResourceProperties" asp-action="Edit" asp-route-id="@Model.Id">Properties</a>
    }
</nav>
