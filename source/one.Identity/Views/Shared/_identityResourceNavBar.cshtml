@using one.Identity.Models.IdentityResourceViewModels
@model IdentityResourceNavBarViewModel

<nav class="nav nav-pills">
    <a class="nav-link @Model.MainActive" asp-area="" asp-controller="IdentityResources" asp-action="Edit" asp-route-id="@Model.Id">Main</a>
