<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spydersoft</title>
    <link rel="shortcut icon" href="img/favicon.png">

    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/lib/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">

    <!-- Main styles for this application -->
    <environment include="Development">
        <link rel="stylesheet" href="~/css/style.css">
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/style.min.css" asp-append-version="true" />
    </environment>
</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden">
    @await Html.PartialAsync("_AppHeader")

    <div class="app-body">
        <div class="sidebar">
            @await Html.PartialAsync("_SidebarNav")
        </div>

        <!-- Main content -->
        <main class="main">
            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- /.conainer-fluid -->
        </main>
    </div>

    @await Html.PartialAsync("_Footer")

    <environment names="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/popper.js/umd/popper.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/js/app.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/app.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
