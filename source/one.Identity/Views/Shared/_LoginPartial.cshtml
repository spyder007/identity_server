@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="nav navbar-nav ml-auto">
    <ul class="nav">
       
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <img src="img/avatars/6.jpg" class="img-avatar" alt="@UserManager.GetUserName(User)">
                    <span class="d-md-down-none">@UserManager.GetUserName(User)</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <div class="dropdown-header text-center">
                        <strong>Account</strong>
                    </div>
                    <a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="Index"><i class="fa fa-shield"></i> Manage</a>
                    <button type="submit" class="dropdown-item"><i class="fa fa-lock"></i> Logout</button>
                </div>
            </li>
</ul>
</form>
}
else
{
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item d-md-down-none">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register"><i class="icon-list"></i>Register</a>
        </li>
        <li class="nav-item d-md-down-none">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login"><i class="icon-location-pin"></i>Login</a>
        </li>
    </ul>   
}
