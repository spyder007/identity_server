@using one.Identity.Models.Admin.ClientViewModels
@model one.Identity.Models.Admin.ClientViewModels.ClientRedirectsViewModel
@{
    ViewData["Title"] = "Edit Client";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Save" asp-route-id="@Model.Id">

    @await Html.PartialAsync("_clientNavBar", Model.NavBar)

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>@Html.LabelFor(model => model.NewItem.RedirectUri)</th>
                <th>Delete</th>
            </tr>
            </thead>

            @foreach (var redirectViewModel in Model.ItemsList)
            {
                <tr>
                    <td>@redirectViewModel.RedirectUri</td>
                    <td><a asp-action="Delete" asp-route-id="@redirectViewModel.Id" asp-route-parentid="@Model.NavBar.Id" title="Delete"><span class="fa fa-trash"></span></a></td>
                </tr>
            }
            <tr>
                <td>
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtClientId" asp-for="NewItem.RedirectUri" pf-validation-for="NewItem.RedirectUri" pf-validationerror-class="is-invalid" />
                        <span asp-validation-for="NewItem.RedirectUri" class="invalid-feedback"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </td>

            </tr>
        </table>
    </div>
</form>
