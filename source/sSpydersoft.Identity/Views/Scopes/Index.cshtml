@using Spydersoft.Identity.Models.Admin.ScopeViewModels;
@model ScopesViewModel
<section>
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <div class="row">
            <div class="card-style mb-30">
                <div class="table-responsive">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Display Name</th>
                                <th>Actions&nbsp;<a asp-controller="Scopes" asp-action="Edit"><span class="fa fa-plus"></span></a></th>
                            </tr>
                        </thead>

                        @foreach (var api in Model.Scopes)
                        {
                            <tr>
                                <td>@api.Name</td>
                                <td>@api.DisplayName</td>
                                <td>
                                    <a asp-controller="Scopes" asp-action="Edit" asp-route-id="@api.Id"><span class="fa fa-edit"></span></a>
                                    <a asp-controller="Scopes" asp-action="Delete" asp-route-id="@api.Id" title="Delete"><span class="fa fa-trash"></span></a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
