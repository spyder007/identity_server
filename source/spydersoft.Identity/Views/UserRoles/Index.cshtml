@using spydersoft.Identity.Models.Identity
@model UsersViewModel
<div class="card">
    <div class="card-header">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Actions&nbsp;<a asp-action="Edit"><span class="fa fa-plus"></span></a></th>
                </tr>
            </thead>

            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id"><span class="fa fa-edit"></span></a>
                        <a asp-action="Delete" asp-route-id="@user.Id" title="Delete"><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
