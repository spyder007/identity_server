@using spydersoft.Identity.Models.Identity
@model ApplicationRole

<form asp-action="Edit">
    <div class="card">
        <div class="card-header">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <div class="border px-2 py-1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.ConcurrencyStamp)
                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    <input type="text" class="form-control" id="txtName" asp-for="Name" pf-validation-for="Name" pf-validationerror-class="is-invalid" />
                    <span asp-validation-for="Name" class="invalid-feedback"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NormalizedName)
                    <input type="text" class="form-control" id="txtDisplayName" asp-for="NormalizedName" pf-validation-for="NormalizedName" pf-validationerror-class="is-invalid" />
                    <span asp-validation-for="NormalizedName" class="invalid-feedback"></span>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

