@using spydersoft.Identity.Models.Admin.ApiViewModels
@model ApiViewModel

<h2>@ViewData["Title"]</h2>

@await Html.PartialAsync("_apiNavBar", Model.NavBar)

<form asp-action="Edit">
    <div class="border px-2 py-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            <input type="text" class="form-control" id="txtName" asp-for="Name" pf-validation-for="Name" pf-validationerror-class="is-invalid" />
            <span asp-validation-for="Name" class="invalid-feedback"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DisplayName)
            <input type="text" class="form-control" id="txtDisplayName" asp-for="DisplayName" pf-validation-for="DisplayName" pf-validationerror-class="is-invalid" />
            <span asp-validation-for="DisplayName" class="invalid-feedback"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            <input type="text" class="form-control" id="txtDescription" asp-for="Description" pf-validation-for="Description" pf-validationerror-class="is-invalid" />
            <span asp-validation-for="Description" class="invalid-feedback"></span>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Enabled" id="chkEnabled" />
                <label class="form-check-label" asp-for="Enabled"></label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="NonEditable" id="chkNonEditable" />
                <label class="form-check-label" asp-for="NonEditable"></label>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

