@using spydersoft.Identity.Models.Admin.ClientViewModels
@model ClientScopesViewModel

<section>
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <div class="row">
            <div class="card-style mb-30">
                <form asp-action="Save" asp-route-id="@Model.Id">

                    @await Html.PartialAsync("_clientNavBar", Model.NavBar)
                    <table class="table striped-table">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.LabelFor(model => model.NewItem.Scope)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        @foreach (var scope in Model.ItemsList)
                        {
                            <tr>
                                <td>@scope.Scope</td>
                                <td><a asp-action="Delete" asp-route-id="@scope.Id" asp-route-parentid="@Model.NavBar.Id" title="Delete"><span class="fa fa-trash"></span></a></td>
                            </tr>
                        }
                        <tr>
                            <td>
                                <div class="mb-3">
                                    <select asp-for="NewItem.Scope" id="selScope" pf-validation-for="NewItem.Scope" pf-validationerror-class="is-invalid" class="form-control">
                                        @foreach (var scope in Model.NewItem.Scopes)
                                        {
                                            <option value="@scope">@scope</option>
                                        }
                                    </select>
                                    <span asp-validation-for="NewItem.Scope" class="invalid-feedback"></span>
                                </div>
                            </td>
                            <td>
                                <div class="mb-3">
                                    <input type="submit" value="Add" class="btn btn-sm btn-primary" />
                                </div>
                            </td>

                        </tr>
                    </table>

                </form>
            </div>
        </div>
    </div>
</section>
