{
  "ConnectionStrings": {
    "IdentityConnection": "Server=sql01;Database=DevIdentity;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "ProviderSettings" : {
    "GoogleClientId": "",
    "GoogleClientSecret": "" 
  },
  "Serilog": {
    "Using": [ "Serilog.Enrichers.Span" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": {
      "ConsoleSink": {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    },
    "Enrich": [ "FromLogContext", "WithSpan" ],
    "Properties": {
      "Application": "identity.server"
    }
  },
  "Zipkin": {
    "Host": "https://tempo.mattgerega.net/zipkin/spans",
    "ServiceName": "identity.server"
  }
}
