{
  "ConnectionStrings": {
    "IdentityConnection": "Server=sql01;Database=DevIdentity;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "ProviderSettings" : {
    "GoogleClientId": "",
    "GoogleClientSecret": "" 
  },
  "Serilog": {
    "MinimumLevel": "Warning",
    "WriteTo": {
      "ConsoleSink": {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      "ElasticSink": {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elastic.mattgerega.net/"
        }
      }
    },
    "Properties": {
      "Application": "identity.server"
    }
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}
